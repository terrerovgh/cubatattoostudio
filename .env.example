# ===================================================
# Cuba Tattoo Studio — Environment Variables
# ===================================================
# Copy to .env and fill in your values

# ─── Instagram (build-time, optional) ─────────────
# Used by scripts/fetch-insta.js to fetch posts at build time
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_RAPIDAPI_KEY=

# ─── Supabase (reference, not actively used) ──────
PUBLIC_SUPABASE_URL=
PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_PROJECT_REF=

# ─── Cloudflare R2 (image storage) ────────────────
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=
R2_TOKEN_VALUE=
UPLOAD_SECRET=

# ─── Stripe (payments) ────────────────────────────
# Get from: https://dashboard.stripe.com/apikeys
# Use sk_test_ keys for development, sk_live_ for production
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ─── Stripe Publishable Key (client-side) ─────────
# Used in booking wizard for Stripe Elements
PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ─── Admin ─────────────────────────────────────────
# Password for /admin panel and protected API endpoints
# Used as Bearer token in Authorization header
ADMIN_PASSWORD=

# ─── Site ──────────────────────────────────────────
SITE_URL=https://cubatattoostudio.com
