---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://instagram.com/cubatattoostudio', label: 'Instagram', icon: 'instagram' },
  { href: 'https://facebook.com/CubaTattooStudioABQ', label: 'Facebook', icon: 'facebook' }
];

const quickLinks = [
  { href: '/artists', label: 'Artists' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/studio', label: 'Studio' },
  { href: '/reservas', label: 'Booking' }
];
---

<footer class="bg-cuba-black border-t border-cuba-gray-600 mt-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo and Description -->
      <div class="md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="text-3xl font-heading text-cuba-white">
            CUBA
          </div>
          <div class="text-sm font-body text-cuba-gray-400 uppercase tracking-wider">
            Tattoo Studio
          </div>
        </div>
        <p class="text-cuba-gray-400 font-body text-sm leading-relaxed mb-6">
          Premium tattoo studio in Albuquerque, New Mexico. 
          Specialists in high-quality body art with over 10 years of experience.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(({ href, label, icon }) => (
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-cuba-gray-600 hover:bg-cuba-white text-cuba-white hover:text-cuba-black transition-all duration-300 flex items-center justify-center"
              aria-label={label}
            >
              {icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Enlaces Rápidos -->
      <div>
        <h3 class="text-cuba-white font-heading uppercase tracking-wider text-lg mb-4">
          Enlaces
        </h3>
        <ul class="space-y-2">
          {quickLinks.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class="text-cuba-gray-400 hover:text-cuba-white font-body text-sm transition-colors duration-300"
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Information -->
      <div>
        <h3 class="text-cuba-white font-heading uppercase tracking-wider text-lg mb-4">
          Contact
        </h3>
        <div class="space-y-2 text-cuba-gray-400 font-body text-sm">
          <p>123 Central Ave NW</p>
          <p>Albuquerque, NM 87102</p>
          <p class="mt-4">
            <a href="tel:+15051234567" class="hover:text-cuba-white transition-colors duration-300">
              +1 (505) 123-4567
            </a>
          </p>
          <p>
            <a href="mailto:info@cubatattoostudio.com" class="hover:text-cuba-white transition-colors duration-300">
              info@cubatattoostudio.com
            </a>
          </p>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-cuba-gray-600 mt-8 pt-8 text-center">
      <p class="text-cuba-gray-400 font-body text-sm">
        © {currentYear} Cuba Tattoo Studio. All rights reserved.
      </p>
    </div>
  </div>
</footer>