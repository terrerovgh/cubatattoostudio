<footer
    id="book"
    class="relative z-20 bg-black text-white py-24 border-t border-neutral-900"
>
    <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16 mb-20">
            <div class="reveal-footer">
                <h2
                    class="text-6xl md:text-8xl font-black tracking-tighter mb-8 text-neutral-100"
                >
                    BOOK<br /><span class="text-red-700">NOW</span>
                </h2>
                <p
                    class="text-neutral-400 max-w-md text-sm leading-relaxed mb-8"
                >
                    Ready to transform your vision into ink? Deposits are
                    non-refundable. Consultations are free.
                </p>
                <a
                    href="#"
                    class="inline-block bg-white text-black text-sm font-bold px-10 py-4 hover:bg-neutral-200 transition-colors uppercase tracking-widest hover:scale-105 duration-300"
                >
                    Schedule Appointment
                </a>
            </div>
            <div class="flex flex-col justify-end space-y-8 reveal-footer">
                <div class="border-b border-white/10 pb-4">
                    <h4
                        class="text-xs font-bold text-neutral-500 uppercase tracking-widest mb-2"
                    >
                        Location
                    </h4>
                    <p class="text-xl font-medium">
                        124 Gold Ave SW<br />Albuquerque, NM 87102
                    </p>
                </div>
                <div class="border-b border-white/10 pb-4">
                    <h4
                        class="text-xs font-bold text-neutral-500 uppercase tracking-widest mb-2"
                    >
                        Hours
                    </h4>
                    <div
                        class="flex justify-between text-sm font-mono text-neutral-300 max-w-xs"
                    >
                        <span>MON - FRI</span>
                        <span>11:00 AM - 8:00 PM</span>
                    </div>
                    <div
                        class="flex justify-between text-sm font-mono text-neutral-300 max-w-xs mt-1"
                    >
                        <span>SAT - SUN</span>
                        <span>12:00 PM - 6:00 PM</span>
                    </div>
                </div>
                <div>
                    <h4
                        class="text-xs font-bold text-neutral-500 uppercase tracking-widest mb-4"
                    >
                        Connect
                    </h4>
                    <div class="flex gap-4">
                        <a
                            href="#"
                            class="hover:text-red-500 transition-colors transform hover:-translate-y-1 duration-300 inline-block"
                            ><i data-lucide="instagram" class="w-6 h-6"></i></a
                        >
                        <a
                            href="#"
                            class="hover:text-red-500 transition-colors transform hover:-translate-y-1 duration-300 inline-block"
                            ><i data-lucide="facebook" class="w-6 h-6"></i></a
                        >
                        <a
                            href="#"
                            class="hover:text-red-500 transition-colors transform hover:-translate-y-1 duration-300 inline-block"
                            ><i data-lucide="twitter" class="w-6 h-6"></i></a
                        >
                    </div>
                </div>
            </div>
        </div>
        <div
            class="flex flex-col md:flex-row justify-between items-center text-[10px] text-neutral-600 font-mono tracking-widest uppercase border-t border-white/5 pt-8"
        >
            <div>Â© 2024 Cuba Tattoo Studio. All Rights Reserved.</div>
            <div class="mt-4 md:mt-0">Designed in Dark Mode</div>
        </div>
    </div>
</footer>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    gsap.from(".reveal-footer", {
        scrollTrigger: { trigger: "footer", start: "top 80%" },
        y: 40,
        opacity: 0,
        duration: 1,
        stagger: 0.2,
        ease: "power3.out",
    });
</script>
