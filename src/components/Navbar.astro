---

<nav
    class="fixed top-0 w-full z-50 px-6 py-5 flex justify-between items-center glass-nav"
>
    <div
        class="font-bold text-2xl tracking-tighter text-white flex items-center gap-2 nav-logo opacity-0 translate-y-[-10px] relative z-50"
    >
        <span class="text-white">CUBA</span><span class="text-neutral-600"
            >TATTOO</span
        >
    </div>

    <div
        class="hidden md:flex gap-8 uppercase text-xs font-semibold text-neutral-400 tracking-widest nav-links opacity-0 translate-y-[-10px]"
    >
        <a
            href="#artists"
            class="hover:text-white transition-colors duration-300">Artists</a
        >
        <a
            href="#portfolio"
            class="hover:text-white transition-colors duration-300">Portfolio</a
        >
        <a
            href="#studio"
            class="hover:text-white transition-colors duration-300">Studio</a
        >
    </div>

    <!-- Desktop CTA -->
    <div class="hidden md:block nav-cta opacity-0 translate-y-[-10px]">
        <a
            href="#book"
            class="text-xs font-bold bg-red-700 text-white px-6 py-3 rounded-sm hover:bg-red-800 transition-colors tracking-widest uppercase"
        >
            Book Now
        </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
        id="menu-toggle"
        class="md:hidden text-white z-50 p-2 focus:outline-none group"
        aria-label="Toggle Menu"
    >
        <!-- Menu Icon -->
        <svg
            id="icon-menu"
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="block w-8 h-8"
        >
            <line x1="4" x2="20" y1="12" y2="12"></line>
            <line x1="4" x2="20" y1="6" y2="6"></line>
            <line x1="4" x2="20" y1="18" y2="18"></line>
        </svg>

        <!-- Close Icon -->
        <svg
            id="icon-close"
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="hidden w-8 h-8"
        >
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
        </svg>
    </button>

    <!-- Mobile Menu Overlay -->
    <div
        id="mobile-menu"
        class="fixed inset-0 bg-black/95 backdrop-blur-xl z-40 opacity-0 pointer-events-none transition-opacity duration-300 overflow-y-auto"
    >
        <div class="min-h-full flex flex-col justify-center items-center py-24">
            <div class="flex flex-col gap-8 text-center">
                <a
                    href="#artists"
                    class="mobile-link text-3xl font-bold text-white uppercase tracking-widest hover:text-red-500 transition-colors"
                    >Artists</a
                >
                <a
                    href="#portfolio"
                    class="mobile-link text-3xl font-bold text-white uppercase tracking-widest hover:text-red-500 transition-colors"
                    >Portfolio</a
                >
                <a
                    href="#studio"
                    class="mobile-link text-3xl font-bold text-white uppercase tracking-widest hover:text-red-500 transition-colors"
                    >Studio</a
                >
                <a
                    href="#book"
                    class="mobile-link text-2xl font-bold bg-red-700 text-white px-8 py-4 rounded-sm hover:bg-red-800 transition-colors tracking-widest uppercase mt-4"
                >
                    Book Now
                </a>
            </div>
        </div>
    </div>
</nav>

<script>
    import { gsap } from "gsap";

    // Nav Entry
    const navTl = gsap.timeline();
    navTl
        .to(".nav-logo", {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: "power3.out",
        })
        .to(
            ".nav-links",
            { opacity: 1, y: 0, duration: 0.8, ease: "power3.out" },
            "-=0.6",
        )
        .to(
            ".nav-cta",
            { opacity: 1, y: 0, duration: 0.8, ease: "power3.out" },
            "-=0.6",
        );

    // Mobile Menu Logic
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileLinks = document.querySelectorAll(".mobile-link");
    const iconMenu = document.getElementById("icon-menu");
    const iconClose = document.getElementById("icon-close");
    let isMenuOpen = false;

    if (menuToggle && mobileMenu && iconMenu && iconClose) {
        menuToggle.addEventListener("click", () => {
            isMenuOpen = !isMenuOpen;

            if (isMenuOpen) {
                // Open Menu
                mobileMenu.classList.remove("pointer-events-none");
                gsap.to(mobileMenu, {
                    opacity: 1,
                    duration: 0.5,
                    ease: "power2.out",
                });

                // Stagger links animation
                gsap.fromTo(
                    ".mobile-link",
                    { y: 20, opacity: 0 },
                    {
                        y: 0,
                        opacity: 1,
                        duration: 0.5,
                        stagger: 0.1,
                        ease: "power2.out",
                        delay: 0.2,
                    },
                );

                // Change Icon
                iconMenu.classList.add("hidden");
                iconMenu.classList.remove("block");
                iconClose.classList.add("block");
                iconClose.classList.remove("hidden");

                document.body.style.overflow = "hidden"; // Lock scroll
            } else {
                // Close Menu
                gsap.to(mobileMenu, {
                    opacity: 0,
                    duration: 0.5,
                    ease: "power2.in",
                    onComplete: () => {
                        mobileMenu.classList.add("pointer-events-none");
                    },
                });

                // Change Icon
                iconMenu.classList.remove("hidden");
                iconMenu.classList.add("block");
                iconClose.classList.remove("block");
                iconClose.classList.add("hidden");

                document.body.style.overflow = ""; // Unlock scroll
            }
        });

        // Close menu when a link is clicked
        mobileLinks.forEach((link) => {
            link.addEventListener("click", () => {
                isMenuOpen = false;
                gsap.to(mobileMenu, {
                    opacity: 0,
                    duration: 0.5,
                    ease: "power2.in",
                    onComplete: () => {
                        mobileMenu.classList.add("pointer-events-none");
                    },
                });

                iconMenu.classList.remove("hidden");
                iconMenu.classList.add("block");
                iconClose.classList.remove("block");
                iconClose.classList.add("hidden");

                document.body.style.overflow = "";
            });
        });
    }
</script>
