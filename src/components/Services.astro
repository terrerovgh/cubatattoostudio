---
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const gallery = await getCollection('gallery');

const sortedServices = services.sort((a, b) => a.data.order - b.data.order);

// Helper to find gallery images for a service
const getServiceImages = (serviceData: any) => {
  // 1. Explicit gallery list in frontmatter
  if (serviceData.gallery && serviceData.gallery.length > 0) {
    return serviceData.gallery;
  }
  
  // 2. Fallback to tags
  if (!serviceData.tags || serviceData.tags.length === 0) return [];
  return gallery.filter(item => 
    item.data.tags.some(tag => serviceData.tags.includes(tag))
  ).map(item => item.data.image).slice(0, 5); // Limit to 5 images for performance
};
---

<section id="services" class="py-32 bg-zinc-950 relative overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-zinc-800/20 via-zinc-950/80 to-zinc-950 pointer-events-none"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col items-center mb-20 space-y-4 section-header">
      <h2 class="text-5xl md:text-7xl font-black text-white uppercase tracking-tighter mix-blend-difference">
        Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-red-900">Services</span>
      </h2>
      <div class="h-1 w-32 bg-red-700 rounded-full"></div>
      <p class="text-zinc-400 max-w-2xl text-center text-lg md:text-xl font-light">
        Experience world-class body art and modification services in a sterile, professional environment.
      </p>
    </div>

      <!-- Services Grid -->
      <div 
        id="services-grid"
        class="grid grid-cols-1 md:grid-cols-3 gap-8"
      >
        {sortedServices.map((service, index) => {
          const galleryImages = getServiceImages(service.data);
          const hasGalleryImages = galleryImages.length > 0;
          
          return (
          <div class="group/card perspective service-card h-[600px] w-full snap-center">
            <div class="relative h-full w-full bg-zinc-900/50 border border-white/5 rounded-2xl overflow-hidden transition-all duration-700 hover:border-red-900/50 hover:shadow-[0_0_50px_-12px_rgba(153,27,27,0.3)] transform-gpu">
              
              <!-- Media Background -->
              <div class="absolute inset-0 w-full h-full overflow-hidden bg-black">
                {/* Default Media (Video or Image) - stays as base */}
                 {service.data.type === 'video' ? (
                  <video 
                    src={service.data.media} 
                    autoplay 
                    loop 
                    muted 
                    playsinline
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover/card:scale-110 opacity-50 group-hover/card:opacity-30 grayscale group-hover/card:grayscale-0 transition-all"
                  />
                ) : (
                   <img 
                    src={service.data.media} 
                    alt={service.data.title}
                    class={`absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover/card:scale-110 opacity-50 group-hover/card:opacity-30 grayscale group-hover/card:grayscale-0 transition-all ${hasGalleryImages ? 'slideshow-image active' : ''}`}
                    style="z-index: 1;"
                  />
                )}

                {/* Slideshow Images Overlay */}
                {hasGalleryImages && service.data.type !== 'video' && galleryImages.map((img, i) => (
                    <img 
                      src={img} 
                      alt={`Gallery image for ${service.data.title}`}
                      class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover/card:scale-110 opacity-0 grayscale group-hover/card:grayscale-0 transition-all slideshow-image"
                      style={`z-index: ${i + 2};`}
                    />
                ))}

                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent z-10 pointer-events-none"></div>
              </div>

              <!-- Glass Content Box -->
              <div class="absolute inset-x-0 bottom-0 p-8 transform transition-transform duration-500 z-20">
                <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-xl p-6 transform translate-y-4 group-hover/card:translate-y-0 transition-all duration-500 hover:bg-white/10 hover:border-white/20 shadow-lg">
                  <div class="flex items-center justify-between mb-4">
                     <span class="px-3 py-1 bg-red-600/20 border border-red-500/30 text-red-500 text-xs font-bold uppercase tracking-widest rounded-full shadow-[0_0_10px_rgba(220,38,38,0.2)]">
                      {service.data.type}
                    </span>
                    {service.data.price && (
                      <span class="text-zinc-300 font-medium text-sm border-b border-red-500/50 pb-0.5">
                        {service.data.price}
                      </span>
                    )}
                  </div>
                  
                  <h3 class="text-3xl font-bold text-white mb-3 group-hover/card:text-red-500 transition-colors uppercase tracking-tight">
                    {service.data.title}
                  </h3>
                  
                  <p class="text-zinc-400 text-sm leading-relaxed mb-6 line-clamp-3 group-hover/card:line-clamp-none transition-all duration-300">
                    {service.data.description}
                  </p>
                  
                  <button 
                    class="w-full py-3 bg-red-900/20 hover:bg-red-700 text-white text-sm font-bold uppercase tracking-wider rounded-lg border border-red-900/30 hover:border-red-600 transition-all duration-300 flex items-center justify-center gap-2 group/btn open-service-modal"
                    data-title={service.data.title}
                    data-description={service.data.description}
                    data-images={JSON.stringify(hasGalleryImages ? galleryImages : [service.data.media])}
                    data-price={service.data.price}
                  >
                    <span>Learn More</span>
                    <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        );
        })}
      </div>
  </div>
</section>

<!-- Service Modal -->
<div id="service-modal" class="fixed inset-0 z-[100] flex items-center justify-center opacity-0 pointer-events-none transition-opacity duration-300" role="dialog" aria-modal="true">
    <div class="absolute inset-0 bg-black/95 backdrop-blur-md" id="service-modal-overlay"></div>
    
    <div class="relative w-full max-w-6xl mx-auto p-4 z-10 flex flex-col md:flex-row gap-8 md:gap-12 h-[90vh] md:h-[80vh]">
        <!-- Close Button -->
        <button id="close-service-modal" class="absolute top-0 right-4 md:-top-12 md:right-0 text-white/50 hover:text-white transition-colors z-50 p-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
            <span class="sr-only">Close</span>
        </button>

        <!-- Image Side -->
        <div class="w-full md:w-1/2 h-1/2 md:h-full bg-zinc-900/50 rounded-lg overflow-hidden border border-white/5 relative group">
            <img id="service-modal-image" src="" alt="Service details" class="w-full h-full object-cover" />
            
            <!-- Gallery Navigation (Hidden if single image) -->
            <div id="service-gallery-nav" class="absolute bottom-4 right-4 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <button id="svc-prev" class="p-2 bg-black/50 text-white rounded-full hover:bg-red-600 transition-colors">←</button>
                <button id="svc-next" class="p-2 bg-black/50 text-white rounded-full hover:bg-red-600 transition-colors">→</button>
            </div>
        </div>

        <!-- content Side -->
        <div class="w-full md:w-1/2 h-1/2 md:h-full overflow-y-auto flex flex-col justify-center text-left space-y-6 md:pr-12">
            <div>
                <span class="text-red-500 font-mono text-sm tracking-widest uppercase border-b border-red-500 pb-1">Service Details</span>
            </div>
            <h3 id="service-modal-title" class="text-4xl md:text-6xl font-black text-white uppercase tracking-tighter leading-none"></h3>
            <div id="service-modal-price" class="text-xl md:text-2xl text-zinc-300 font-light"></div>
            <div class="space-y-4">
                 <p id="service-modal-desc" class="text-zinc-400 text-lg leading-relaxed whitespace-pre-wrap"></p>
            </div>
            
            <div class="pt-8 mt-auto">
                <a href="#book" onclick="document.getElementById('close-service-modal').click()" class="inline-flex items-center justify-center gap-2 w-full md:w-auto bg-red-700 hover:bg-red-800 text-white font-bold py-4 px-8 rounded-sm uppercase tracking-widest transition-all">
                    <span>Book Appointment</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .perspective {
    perspective: 1000px;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Animations
  const sectionHeader = document.querySelector('.section-header');
  const cards = document.querySelectorAll('.service-card');
  
  // Header Animation
  if (sectionHeader) {
      gsap.fromTo(sectionHeader, 
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: "#services",
            start: "top 75%",
          }
        }
      );
  }

  // Cards Stagger Animation
  if (cards.length > 0) {
    gsap.fromTo(cards, 
      { opacity: 0, y: 100, rotateX: 10 },
      {
        opacity: 1,
        y: 0,
        rotateX: 0,
        duration: 0.8,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: {
            trigger: "#services",
            start: "top 60%",
        }
      }
    );
  }

  // Slideshow Logic (Preserved)
  const initSlideshows = () => {
    cards.forEach(card => {
        const images = card.querySelectorAll('.slideshow-image');
        if (images.length <= 1) return;

        let currentIndex = 0;
        
        setInterval(() => {
            const currentImg = images[currentIndex];
            const nextIndex = (currentIndex + 1) % images.length;
            const nextImg = images[nextIndex];

            gsap.to(currentImg, { opacity: 0, duration: 1.5, ease: "power2.inOut" });
            
            // Note: We use grayscale on base images, but slideshow logic overrides opacities.
            // When active, opacity should be 0.5 (or higher on hover/mobile scroll trigger).
            // Let's ensure the fading in image respects the grayscale class which is handled by CSS/ScrollTrigger
            // We just animate opacity here.
            gsap.to(nextImg, { opacity: 0.5, duration: 1.5, ease: "power2.inOut" });

            currentIndex = nextIndex;
        }, 4000); 
    });
  };

  initSlideshows();

  // Mobile Color Reveal Logic
  ScrollTrigger.matchMedia({
      "(max-width: 768px)": function() {
          gsap.utils.toArray(".service-card").forEach((card: any) => {
              const images = card.querySelectorAll("img, video");
              gsap.to(images, {
                  scrollTrigger: {
                      trigger: card,
                      start: "top 75%",
                      toggleActions: "play none none reverse"
                  },
                  filter: "grayscale(0%)",
                  duration: 0.5,
                  ease: "power2.out"
              });
          });
      }
  });

  // Modal Logic
  const modal = document.getElementById('service-modal');
  const overlay = document.getElementById('service-modal-overlay');
  const closeBtn = document.getElementById('close-service-modal');
  const triggers = document.querySelectorAll('.open-service-modal');
  
  // Modal Elements
  const mTitle = document.getElementById('service-modal-title');
  const mDesc = document.getElementById('service-modal-desc');
  const mPrice = document.getElementById('service-modal-price');
  const mImage = document.getElementById('service-modal-image') as HTMLImageElement;
  const mNext = document.getElementById('svc-next');
  const mPrev = document.getElementById('svc-prev');
  const mNav = document.getElementById('service-gallery-nav');

  let currentGallery: string[] = [];
  let currentGalleryIndex = 0;

  const updateModalImage = () => {
      if (mImage && currentGallery.length > 0) {
          // simple fade
          gsap.to(mImage, { opacity: 0, duration: 0.2, onComplete: () => {
              mImage.src = currentGallery[currentGalleryIndex];
              gsap.to(mImage, { opacity: 1, duration: 0.2 });
          }});
      }
  };

  if (modal && overlay && closeBtn) {
      const closeModal = () => {
          modal.classList.add('opacity-0', 'pointer-events-none');
          document.body.style.overflow = '';
      };

      const openModal = (data: DOMStringMap) => {
           if (mTitle) mTitle.textContent = data.title || '';
           if (mDesc) mDesc.textContent = data.description || '';
           if (mPrice) mPrice.textContent = data.price || '';
           
           try {
               currentGallery = JSON.parse(data.images || '[]');
           } catch {
               currentGallery = [];
           }
           currentGalleryIndex = 0;

           if (mImage && currentGallery.length > 0) {
               mImage.src = currentGallery[0];
           }

           if (mNav) {
               if (currentGallery.length > 1) {
                   mNav.classList.remove('hidden');
               } else {
                   mNav.classList.add('hidden');
               }
           }

           modal.classList.remove('opacity-0', 'pointer-events-none');
           document.body.style.overflow = 'hidden';
      };

      triggers.forEach(btn => {
          btn.addEventListener('click', (e) => {
              e.preventDefault(); // prevent form submit if inside form
              const target = e.currentTarget as HTMLElement;
              openModal(target.dataset);
          });
      });

      closeBtn.addEventListener('click', closeModal);
      overlay.addEventListener('click', closeModal);

      // Gallery Nav
      if (mNext && mPrev) {
          mNext.addEventListener('click', () => {
              if (currentGallery.length > 0) {
                  currentGalleryIndex = (currentGalleryIndex + 1) % currentGallery.length;
                  updateModalImage();
              }
          });
          mPrev.addEventListener('click', () => {
              if (currentGallery.length > 0) {
                  currentGalleryIndex = (currentGalleryIndex - 1 + currentGallery.length) % currentGallery.length;
                  updateModalImage();
              }
          });
      }
  }
</script>
