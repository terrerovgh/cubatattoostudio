---
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const gallery = await getCollection('gallery');

const sortedServices = services.sort((a, b) => a.data.order - b.data.order);

// Helper to find gallery images for a service
const getServiceImages = (serviceData: any) => {
  // 1. Explicit gallery list in frontmatter
  if (serviceData.gallery && serviceData.gallery.length > 0) {
    return serviceData.gallery;
  }
  
  // 2. Fallback to tags
  if (!serviceData.tags || serviceData.tags.length === 0) return [];
  return gallery.filter(item => 
    item.data.tags.some(tag => serviceData.tags.includes(tag))
  ).map(item => item.data.image).slice(0, 5); // Limit to 5 images for performance
};
---

<section id="services" class="py-32 bg-zinc-950 relative overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-zinc-800/20 via-zinc-950/80 to-zinc-950 pointer-events-none"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col items-center mb-20 space-y-4 section-header">
      <h2 class="text-5xl md:text-7xl font-black text-white uppercase tracking-tighter mix-blend-difference">
        Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-red-900">Services</span>
      </h2>
      <div class="h-1 w-32 bg-red-700 rounded-full"></div>
      <p class="text-zinc-400 max-w-2xl text-center text-lg md:text-xl font-light">
        Experience world-class body art and modification services in a sterile, professional environment.
      </p>
    </div>

    <!-- Carousel Container -->
    <div class="relative group section-content">
      <!-- Navigation Buttons -->
      <button 
        id="prev-btn"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 md:-translate-x-16 z-30 bg-black/50 hover:bg-red-700 border border-white/10 text-white p-4 rounded-full backdrop-blur-md transition-all duration-300 opacity-0 group-hover:opacity-100 disabled:opacity-30 disabled:cursor-not-allowed hover:scale-110 active:scale-95 hidden md:block"
        aria-label="Previous slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <button 
        id="next-btn"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 md:translate-x-16 z-30 bg-black/50 hover:bg-red-700 border border-white/10 text-white p-4 rounded-full backdrop-blur-md transition-all duration-300 opacity-0 group-hover:opacity-100 disabled:opacity-30 disabled:cursor-not-allowed hover:scale-110 active:scale-95 hidden md:block"
        aria-label="Next slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>

      <!-- Scroll Container -->
      <div 
        id="carousel-track"
        class="flex gap-8 overflow-x-auto snap-x snap-mandatory scrollbar-hide pb-12 px-4 -mx-4 scroll-smooth"
        style="scrollbar-width: none; -ms-overflow-style: none;"
      >
        {sortedServices.map((service, index) => {
          const galleryImages = getServiceImages(service.data);
          const hasGalleryImages = galleryImages.length > 0;
          
          return (
          <div class="flex-none w-[85vw] md:w-[450px] snap-center group/card perspective service-card">
            <div class="relative h-[600px] w-full bg-zinc-900/50 border border-white/5 rounded-2xl overflow-hidden transition-all duration-700 hover:border-red-900/50 hover:shadow-[0_0_50px_-12px_rgba(153,27,27,0.3)] transform-gpu">
              
              <!-- Media Background -->
              <div class="absolute inset-0 w-full h-full overflow-hidden bg-black">
                {/* Default Media (Video or Image) - stays as base */}
                 {service.data.type === 'video' ? (
                  <video 
                    src={service.data.media} 
                    autoplay 
                    loop 
                    muted 
                    playsinline
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover/card:scale-110 opacity-50 group-hover/card:opacity-30"
                  />
                ) : (
                   <img 
                    src={service.data.media} 
                    alt={service.data.title}
                    class={`absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover/card:scale-110 opacity-50 group-hover/card:opacity-30 ${hasGalleryImages ? 'slideshow-image active' : ''}`}
                    style="z-index: 1;"
                  />
                )}

                {/* Slideshow Images Overlay */}
                {hasGalleryImages && service.data.type !== 'video' && galleryImages.map((img, i) => (
                    <img 
                      src={img} 
                      alt={`Gallery image for ${service.data.title}`}
                      class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover/card:scale-110 opacity-0 slideshow-image"
                      style={`z-index: ${i + 2};`}
                    />
                ))}

                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent z-10 pointer-events-none"></div>
              </div>

              <!-- Glass Content Box -->
              <div class="absolute inset-x-0 bottom-0 p-8 transform transition-transform duration-500 z-20">
                <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-xl p-6 transform translate-y-4 group-hover/card:translate-y-0 transition-all duration-500 hover:bg-white/10 hover:border-white/20 shadow-lg">
                  <div class="flex items-center justify-between mb-4">
                     <span class="px-3 py-1 bg-red-600/20 border border-red-500/30 text-red-500 text-xs font-bold uppercase tracking-widest rounded-full shadow-[0_0_10px_rgba(220,38,38,0.2)]">
                      {service.data.type}
                    </span>
                    {service.data.price && (
                      <span class="text-zinc-300 font-medium text-sm border-b border-red-500/50 pb-0.5">
                        {service.data.price}
                      </span>
                    )}
                  </div>
                  
                  <h3 class="text-3xl font-bold text-white mb-3 group-hover/card:text-red-500 transition-colors uppercase tracking-tight">
                    {service.data.title}
                  </h3>
                  
                  <p class="text-zinc-400 text-sm leading-relaxed mb-6 line-clamp-3 group-hover/card:line-clamp-none transition-all duration-300">
                    {service.data.description}
                  </p>
                  
                  <button class="w-full py-3 bg-red-900/20 hover:bg-red-700 text-white text-sm font-bold uppercase tracking-wider rounded-lg border border-red-900/30 hover:border-red-600 transition-all duration-300 flex items-center justify-center gap-2 group/btn">
                    <span>Learn More</span>
                    <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        );
        })}
      </div>
      
      <!-- Dots Indicators -->
      <div class="flex justify-center gap-3 mt-8">
        {sortedServices.map((_, index) => (
          <button
            class="w-2 h-2 rounded-full bg-zinc-800 transition-all duration-300 hover:bg-red-600 focus:outline-none hover:w-6 indicator-dot"
            aria-label={`Go to slide ${index + 1}`}
            data-index={index}
          ></button>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .perspective {
    perspective: 1000px;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Animations
  const sectionHeader = document.querySelector('.section-header');
  const cards = document.querySelectorAll('.service-card');
  const track = document.getElementById('carousel-track');
  const prevBtn = document.getElementById('prev-btn') as HTMLButtonElement | null;
  const nextBtn = document.getElementById('next-btn') as HTMLButtonElement | null;

  // Header Animation
  if (sectionHeader) {
      gsap.fromTo(sectionHeader, 
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: "#services",
            start: "top 75%",
          }
        }
      );
  }

  // Cards Stagger Animation
  if (cards.length > 0) {
    gsap.fromTo(cards, 
      { opacity: 0, y: 100, rotateX: 10 },
      {
        opacity: 1,
        y: 0,
        rotateX: 0,
        duration: 0.8,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: {
            trigger: "#services",
            start: "top 60%",
        }
      }
    );
  }

  // Slideshow Logic
  const initSlideshows = () => {
    cards.forEach(card => {
        const images = card.querySelectorAll('.slideshow-image');
        if (images.length <= 1) return;

        let currentIndex = 0;
        
        // Ensure first image is visible initially
        // (CSS handles initial state, but JS loop handles transitions)
        
        setInterval(() => {
            const currentImg = images[currentIndex];
            const nextIndex = (currentIndex + 1) % images.length;
            const nextImg = images[nextIndex];

            // simple crossfade using opacity classes or direct styles
            // We use inline styles in the template for opacity-0/50, let's toggle classes or animate
            
            // However, our template set opacity-0 for extra images.
            // Let's use GSAP for smooth crossfade
            
            gsap.to(currentImg, { opacity: 0, duration: 1.5, ease: "power2.inOut" });
            gsap.to(nextImg, { opacity: 0.5, duration: 1.5, ease: "power2.inOut" }); // Match the base opacity of 0.5/0.3 hover

            currentIndex = nextIndex;
        }, 4000); // Change every 4 seconds
    });
  };

  initSlideshows();

  // Carousel Logic
  if (track && prevBtn && nextBtn) {
    const scrollAmount = () => {
        const card = track.firstElementChild;
        return card ? card.clientWidth + 32 : 450; // 32 is gap-8 (2rem)
    };

    nextBtn.addEventListener('click', () => {
      track.scrollBy({ left: scrollAmount(), behavior: 'smooth' });
    });

    prevBtn.addEventListener('click', () => {
      track.scrollBy({ left: -scrollAmount(), behavior: 'smooth' });
    });
    
    // Simple state checking for buttons
    const updateButtons = () => {
      prevBtn.disabled = track.scrollLeft <= 0;
      nextBtn.disabled = track.scrollLeft >= track.scrollWidth - track.clientWidth - 10;
    };
    
    track.addEventListener('scroll', updateButtons);
    // Initial check
    setTimeout(updateButtons, 100);
  }
</script>
