---
interface Props {
  class?: string;
  padding?: string;
  maxWidth?: string;
  animate?: boolean;
  elevated?: boolean;
  glow?: boolean;
}

const {
  class: className = "",
  padding = "p-6 sm:p-8 lg:p-12",
  maxWidth = "max-w-4xl",
  animate = true,
  elevated = false,
  glow = false,
} = Astro.props;

const glassClass = elevated ? "liquid-glass-elevated" : "liquid-glass";
---

<div
  class:list={[
    glassClass,
    "mx-4 sm:mx-6 lg:mx-auto rounded-[24px] sm:rounded-[32px] transition-all duration-500",
    padding,
    maxWidth,
    glow && "ambient-glow",
    className,
  ]}
  data-animate={animate ? "" : undefined}
>
  <div class="relative z-10">
    <slot />
  </div>
</div>
