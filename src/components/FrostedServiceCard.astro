---
import { Image } from "astro:assets";

interface Props {
    title: string;
    description: string;
    price?: string;
    image: ImageMetadata;
    class?: string;
}

const { title, description, price, image, class: className = "" } = Astro.props;
---

<div class={`previewCard ${className}`}>
    <Image src={image} alt={title} class="backdrop" width={600} />
    <div class="content">
        <div class="category">Service</div>
        <div class="title">{title}</div>
        <div class="description">
            <p>{description}</p>
            {price && <span>{price}</span>}
        </div>
    </div>
</div>

<style>
    .previewCard {
        --gutter: 1.25rem;
        --brightness: 0.85;
        --saturation: 1.5;
        --frostRadius: 1.5rem;

        padding: var(--gutter);
        border-radius: var(--gutter);
        width: 100%;
        min-height: 280px;
        display: grid;
        justify-content: start;
        align-content: end;
        position: relative;
        background: #333;
        overflow: hidden;
        cursor: pointer;
        transition: transform 400ms cubic-bezier(0.23, 1, 0.32, 1),
                    box-shadow 400ms cubic-bezier(0.23, 1, 0.32, 1),
                    border-color 300ms ease;
        border: 1px solid transparent;
    }

    .previewCard:hover {
        transform: translateY(-4px) scale(1.015);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.35),
                    0 0 0 1px rgba(200, 149, 108, 0.15);
        border-color: rgba(200, 149, 108, 0.12);
    }

    @media (hover: none) {
        .previewCard:hover {
            transform: none;
            box-shadow: none;
            border-color: transparent;
        }
    }

    @media (min-width: 640px) {
        .previewCard {
            --gutter: 1.5rem;
        }
    }

    .backdrop {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        pointer-events: none;
        user-select: none;
        transition: transform 600ms cubic-bezier(0.23, 1, 0.32, 1);
        z-index: 0;
    }

    .previewCard:hover .backdrop {
        transform: scale(1.08);
    }

    .previewCard:after {
        content: "";
        position: absolute;
        inset: -0.5rem;
        z-index: 1;
        pointer-events: none;
        backdrop-filter: blur(var(--frostRadius)) saturate(var(--saturation))
            brightness(var(--brightness));
        background: linear-gradient(
            to bottom,
            rgba(255, 255, 255, 0) 0%,
            rgba(255, 255, 255, 0.1) 100%
        );
        mask-image: linear-gradient(
            to bottom,
            transparent 0%,
            rgba(0, 0, 0, 0.1) 40%,
            rgba(0, 0, 0, 0.5) 55%,
            black 75%
        );
        -webkit-mask-image: linear-gradient(
            to bottom,
            transparent 0%,
            rgba(0, 0, 0, 0.1) 40%,
            rgba(0, 0, 0, 0.5) 55%,
            black 75%
        );
    }

    .content {
        position: relative;
        z-index: 2;
        display: grid;
        bottom: 0;
        justify-content: start;
        align-content: end;
        gap: 0.5rem;
        width: 100%;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
    }

    .title {
        font-size: clamp(1.25rem, 2vw + 0.5rem, 1.5rem);
        font-weight: 700;
        color: white;
        line-height: 1.2;
    }

    .category {
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.1rem;
        opacity: 0.8;
        font-size: 0.75rem;
        color: var(--color-gold, #c8956c);
    }

    .description {
        font-size: 0.875rem;
        line-height: 1.5;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        gap: 1rem;
        color: rgba(255, 255, 255, 0.85);
    }

    .description p {
        margin: 0;
    }

    .description span {
        font-size: 0.875rem;
        font-weight: 600;
        white-space: nowrap;
        color: var(--color-gold, #c8956c);
        background: rgba(0, 0, 0, 0.3);
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
    }
</style>
