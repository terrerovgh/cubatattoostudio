---
import BookingCalendar from "../Booking/Calendar";

interface Props {
    artistName: string;
}

const { artistName } = Astro.props;
---

<section
    id="calendar"
    class="py-16 md:py-24 bg-neutral-950 border-t border-white/5"
>
    <div class="max-w-6xl mx-auto px-4 md:px-6">
        <div class="text-center mb-10 md:mb-12">
            <h2
                class="text-[10px] md:text-xs font-bold text-neutral-500 tracking-[0.5em] mb-3 md:mb-4 uppercase"
            >
                Booking
            </h2>
            <h3
                class="text-3xl md:text-4xl font-bold text-white tracking-tighter"
            >
                SCHEDULE WITH {artistName.toUpperCase()}
            </h3>
        </div>

        <div
            class="bg-neutral-900/50 p-4 md:p-8 rounded-xl border border-white/5"
        >
            <BookingCalendar
                client:visible
                artistName={artistName}
                bookings={[]}
            />
        </div>
    </div>
</section>
