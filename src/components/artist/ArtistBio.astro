---
interface AdditionalStyle {
  style: string;
  description: string;
}

interface Props {
  bio: string;
  styleDescription: string;
  signatureStyle: string;
  achievements?: string[];
  additionalStyles?: AdditionalStyle[];
  accentColor: string;
  animateDir?: 'left' | 'right';
}

const {
  bio,
  styleDescription,
  signatureStyle,
  achievements = [],
  additionalStyles = [],
  accentColor,
  animateDir = 'left',
} = Astro.props;
---

<div class="space-y-8" id="bio" data-section="bio">
  {/* Bio */}
  <div
    class="liquid-glass rounded-[24px] p-6 sm:p-8 space-y-6"
    data-animate-left={animateDir === 'left' ? '' : undefined}
    data-animate-right={animateDir === 'right' ? '' : undefined}
  >
    <h3 class="text-xl font-bold text-white" data-animate-heading>Sobre Mi</h3>
    <p class="text-white/60 text-base leading-relaxed font-light">{bio}</p>
  </div>

  {/* Style Description */}
  <div
    class="liquid-glass rounded-[24px] p-6 sm:p-8 space-y-4"
    data-animate-left={animateDir === 'left' ? '' : undefined}
    data-animate-right={animateDir === 'right' ? '' : undefined}
  >
    <h3 class="text-xl font-bold text-white" data-animate-heading>Mi Estilo</h3>
    <p class="text-white/60 text-base leading-relaxed font-light">{styleDescription}</p>
    <p class="italic text-sm font-medium" style={`color: ${accentColor};`}>
      &ldquo;{signatureStyle}&rdquo;
    </p>
  </div>

  {/* Achievements */}
  {
    achievements.length > 0 && (
      <div
        class="liquid-glass rounded-[24px] p-6 sm:p-8 space-y-4"
        data-animate-scale
      >
        <h3 class="text-xl font-bold text-white" data-animate-heading>
          Logros
        </h3>
        <ul class="space-y-3">
          {achievements.map((achievement) => (
            <li class="flex items-start gap-3 text-white/60 text-sm">
              <span
                class="mt-1 w-1.5 h-1.5 rounded-full shrink-0"
                style={`background: ${accentColor};`}
              />
              {achievement}
            </li>
          ))}
        </ul>
      </div>
    )
  }

  {/* Additional Styles */}
  {
    additionalStyles.length > 0 && (
      <div class="space-y-4" data-animate>
        <h3
          class="text-xl font-bold text-white px-2"
          data-animate-heading
        >
          Estilos Adicionales
        </h3>
        <div class="space-y-3">
          {additionalStyles.map((s) => (
            <div class="rounded-[20px] bg-white/[0.03] border border-white/[0.05] p-5 hover:bg-white/[0.05] transition-colors duration-300">
              <h4 class="text-sm font-semibold text-white mb-1">{s.style}</h4>
              <p class="text-white/40 text-xs leading-relaxed">{s.description}</p>
            </div>
          ))}
        </div>
      </div>
    )
  }
</div>
