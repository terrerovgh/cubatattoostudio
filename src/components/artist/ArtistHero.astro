---
import type { CollectionEntry } from "astro:content";

interface Props {
    artist: CollectionEntry<"artists">["data"];
}

const { artist } = Astro.props;
const profileImage = artist.profileImage || artist.coverImage; // Fallback

const statusColors = {
    "walk-ins": "bg-green-500 text-green-100 border-green-500/20",
    booking: "bg-blue-500 text-blue-100 border-blue-500/20",
    closed: "bg-red-500 text-red-100 border-red-500/20",
};

const statusLabels = {
    "walk-ins": "Walk-ins Available",
    booking: "Open for Booking",
    closed: "Currently Closed",
};
---

<section class="relative bg-neutral-950 pb-12 md:pb-20">
    <!-- Banner Image -->
    <div class="h-[30vh] md:h-[40vh] w-full relative overflow-hidden">
        <img
            src={artist.coverImage}
            alt="Cover"
            class="w-full h-full object-cover opacity-80"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-neutral-950 to-transparent"
        >
        </div>
    </div>

    <!-- Profile Content -->
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative -mt-20 md:-mt-32 z-10">
        <div
            class="flex flex-col md:flex-row items-center md:items-end gap-6 md:gap-10 text-center md:text-left"
        >
            <!-- Profile Image -->
            <div class="relative w-40 h-40 md:w-56 md:h-56 shrink-0">
                <div
                    class="w-full h-full rounded-full border-4 border-neutral-950 overflow-hidden shadow-2xl bg-neutral-900"
                >
                    <img
                        src={profileImage}
                        alt={artist.name}
                        class="w-full h-full object-cover"
                    />
                </div>
                <!-- Status Badge (Mobile: Bottom Center, Desktop: Bottom Right) -->
                <div
                    class={`absolute bottom-2 right-1/2 translate-x-1/2 md:translate-x-0 md:right-4 px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider border backdrop-blur-md shadow-lg flex items-center gap-2 ${statusColors[artist.status]}`}
                >
                    <span class="relative flex h-2 w-2">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full opacity-75 bg-current"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2 w-2 bg-current"
                        ></span>
                    </span>
                    {statusLabels[artist.status]}
                </div>
            </div>

            <!-- Name and CTA -->
            <div class="flex-1 pb-4">
                <h1
                    class="text-4xl md:text-7xl font-black text-white tracking-tighter mb-2 uppercase"
                >
                    {artist.name}
                </h1>
                <p
                    class="text-neutral-400 text-lg md:text-xl font-light tracking-wide mb-6"
                >
                    {artist.style}
                </p>

                <button
                    onclick="document.querySelector('button[aria-label=\'Open Chat\']')?.click()"
                    class="inline-flex items-center gap-2 px-8 py-3 bg-white text-black font-bold uppercase tracking-widest text-sm hover:bg-neutral-200 transition-colors rounded-sm"
                >
                    <span>Book Appointment</span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
                        ></path></svg
                    >
                </button>
            </div>

            <!-- Socials -->
            {
                artist.socials?.instagram && (
                    <div class="md:pb-6">
                        <a
                            href={artist.socials.instagram}
                            target="_blank"
                            class="text-neutral-500 hover:text-white transition-colors"
                        >
                            <span class="sr-only">Instagram</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <>
                                    <rect
                                        width="20"
                                        height="20"
                                        x="2"
                                        y="2"
                                        rx="5"
                                        ry="5"
                                    />
                                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                                    <line
                                        x1="17.5"
                                        x2="17.51"
                                        y1="6.5"
                                        y2="6.5"
                                    />
                                </>
                            </svg>
                        </a>
                    </div>
                )
            }
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";

    const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

    tl.from(".artist-name-reveal", {
        y: 100,
        opacity: 0,
        duration: 1.2,
        delay: 0.2,
        ease: "power4.out",
    })
        .from(
            ".artist-style-reveal",
            {
                y: 30,
                opacity: 0,
                duration: 1,
            },
            "-=0.8",
        )
        .to(
            ".artist-social-reveal",
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
            },
            "-=0.5",
        );
</script>
