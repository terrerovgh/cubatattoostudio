---
interface Props {
  name: string;
  role: string;
  profileImage: string;
  instagram?: { username: string; publications: number; followers: number };
  specialties: string[];
  accentColor: string;
}

const { name, role, profileImage, instagram, specialties, accentColor } =
  Astro.props;
---

<section
  class="min-h-[50vh] sm:min-h-[60vh] flex items-center justify-center py-20 lg:py-28 relative"
  id="artist-hero"
  data-section="artist-hero"
>
  <div
    class="relative z-10 flex flex-col items-center text-center px-6 sm:px-8 max-w-3xl mx-auto space-y-6 sm:space-y-8"
  >
    {/* Profile photo — clip-path reveal */}
    <div class="relative" data-animate-clip>
      <div
        class="w-32 h-32 sm:w-40 sm:h-40 lg:w-44 lg:h-44 rounded-full overflow-hidden ring-2 ring-offset-4 ring-offset-transparent"
        style={`ring-color: ${accentColor};`}
      >
        <img
          src={profileImage}
          alt={name}
          class="w-full h-full object-cover"
          loading="eager"
          style="aspect-ratio: 1 / 1;"
        />
      </div>
      <div
        class="absolute -inset-2 rounded-full opacity-20 blur-xl -z-10"
        style={`background: ${accentColor};`}
      >
      </div>
    </div>

    {/* Name & Role */}
    <div data-animate-heading>
      <h1
        class="text-fluid-xl font-bold tracking-tight mb-2"
      >
        {name}
      </h1>
      <p
        class="text-base sm:text-lg uppercase tracking-widest font-medium opacity-80"
        style={`color: ${accentColor};`}
      >
        {role}
      </p>
    </div>

    {/* Instagram link */}
    {
      instagram && (
        <a
          href={`https://instagram.com/${instagram.username}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2.5 px-5 py-2.5 rounded-xl text-sm font-medium transition-all duration-300 hover:scale-[1.03]"
          style={`background: ${accentColor}20; border: 1px solid ${accentColor}40; color: ${accentColor};`}
          data-animate
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
          </svg>
          @{instagram.username}
        </a>
      )
    }

    {/* Specialty tags — horizontal scroll on mobile, wrap on desktop */}
    <div
      class="w-full max-w-xl scroll-x-fade sm:overflow-visible"
      data-animate
    >
      <div class="flex sm:flex-wrap sm:justify-center gap-2 px-1 sm:px-0 w-max sm:w-auto mx-auto">
        {
          specialties.map((spec) => (
            <span
              class="shrink-0 px-3 py-1.5 rounded-lg text-xs font-medium text-white/70 border border-white/[0.06]"
              style={`background: ${accentColor}10;`}
            >
              {spec}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</section>
