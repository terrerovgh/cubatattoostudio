---
interface Props {
    artistName: string;
}

const { artistName } = Astro.props;
---

<section
    class="py-16 md:py-24 bg-neutral-900 border-y border-white/5 relative overflow-hidden"
>
    <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(255,255,255,0.03)_0%,transparent_70%)]"
    >
    </div>

    <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
        <h2
            class="text-2xl md:text-5xl font-bold text-white tracking-tighter mb-6 md:mb-8"
        >
            READY TO GET INKED?
        </h2>
        <p
            class="text-lg md:text-xl text-neutral-400 font-light mb-10 md:mb-12 max-w-2xl mx-auto"
        >
            Book a session with {artistName} and bring your vision to life.
        </p>

        <button
            onclick="document.querySelector('button[aria-label=\'Open Chat\']')?.click()"
            class="group relative inline-flex items-center justify-center px-8 py-4 bg-white text-black text-sm font-bold tracking-[0.2em] uppercase overflow-hidden hover:bg-neutral-200 transition-colors"
        >
            <span class="relative z-10">Start Consultation</span>
            <div
                class="absolute inset-0 bg-neutral-200 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-300"
            >
            </div>
        </button>
    </div>
</section>
