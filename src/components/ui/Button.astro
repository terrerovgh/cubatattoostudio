---
export interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  class?: string;
  animated?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  class: className = '',
  animated = true,
  ...rest
} = Astro.props;

const baseClasses = 'relative inline-flex items-center justify-center font-heading uppercase tracking-wider transition-all duration-500 focus:outline-none focus:ring-2 focus:ring-cuba-gray-400 focus:ring-offset-2 focus:ring-offset-cuba-black disabled:opacity-50 disabled:cursor-not-allowed overflow-hidden group';

const variantClasses = {
  primary: 'bg-cuba-white text-cuba-black hover:bg-cuba-gray-200 hover:text-cuba-black transform hover:scale-105 hover:shadow-2xl',
  secondary: 'bg-cuba-black text-cuba-white border border-cuba-gray-600 hover:border-cuba-white hover:bg-cuba-gray-800 hover:shadow-lg transform hover:scale-105',
  outline: 'bg-transparent text-cuba-white border border-cuba-white hover:bg-cuba-white hover:text-cuba-black transform hover:scale-105 hover:shadow-xl',
  ghost: 'bg-transparent text-cuba-gray-400 hover:text-cuba-white hover:bg-cuba-gray-800 transform hover:scale-105'
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

const animatedClasses = animated ? 'hover:animate-pulse' : '';
const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${animatedClasses} ${className}`;
---

{href ? (
  <a href={href} class={classes} {...rest}>
    <!-- Efecto de resplandor -->
    {animated && (
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-cuba-white to-transparent opacity-0 group-hover:opacity-20 transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-all duration-700 ease-out"></div>
    )}
    <!-- Contenido del botón -->
    <span class="relative z-10 flex items-center justify-center">
      <slot />
    </span>
    <!-- Efecto de borde animado -->
    {animated && variant === 'outline' && (
      <div class="absolute inset-0 border border-cuba-white opacity-0 group-hover:opacity-100 transform scale-110 group-hover:scale-100 transition-all duration-300"></div>
    )}
  </a>
) : (
  <button type={type} class={classes} disabled={disabled} {...rest}>
    <!-- Efecto de resplandor -->
    {animated && (
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-cuba-white to-transparent opacity-0 group-hover:opacity-20 transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-all duration-700 ease-out"></div>
    )}
    <!-- Contenido del botón -->
    <span class="relative z-10 flex items-center justify-center">
      <slot />
    </span>
    <!-- Efecto de borde animado -->
    {animated && variant === 'outline' && (
      <div class="absolute inset-0 border border-cuba-white opacity-0 group-hover:opacity-100 transform scale-110 group-hover:scale-100 transition-all duration-300"></div>
    )}
  </button>
)}