---
import GlassCard from '../GlassCard.astro';
import SectionWrapper from '../SectionWrapper.astro';

interface Props {
  id: string;
  backgroundImage: string;
  title?: string;
  subtitle?: string;
}

const { id, backgroundImage, title, subtitle } = Astro.props;
---

<SectionWrapper id={id} backgroundImage={backgroundImage}>
  <GlassCard class="text-center" maxWidth="max-w-3xl" elevated glow>
    <div class="space-y-10">
      {title && (
        <h1 class="text-gradient-white text-5xl sm:text-7xl lg:text-[5.5rem] font-extrabold tracking-[-0.03em] leading-[0.95]">
          {title}
        </h1>
      )}
      {subtitle && (
        <p class="text-lg sm:text-xl text-white/50 font-light max-w-lg mx-auto tracking-wide leading-relaxed">
          {subtitle}
        </p>
      )}
      <div class="pt-2">
        <a
          href="#booking"
          class="group inline-flex items-center gap-3 px-8 py-4 rounded-2xl
                 bg-[var(--color-gold)] text-black font-semibold text-base
                 transition-all duration-500 ease-out
                 hover:shadow-[0_8px_30px_rgba(200,149,108,0.3)]
                 hover:scale-[1.03] active:scale-[0.98]"
        >
          Book a Consultation
          <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
  </GlassCard>
</SectionWrapper>
