---
import SectionWrapper from "../SectionWrapper.astro";
import { existsSync } from "fs";
import { resolve } from "path";

interface Artist {
  name: string;
  role: string;
  image: string;
  instagram?: string;
  portfolio?: string[];
}

interface Props {
  id: string;
  backgroundImage: string;
  title?: string;
  artists?: Artist[];
}

const { id, backgroundImage, title, artists = [] } = Astro.props;

/**
 * Resolve artist profile image — prefer downloaded .jpg over .svg placeholder.
 * The fetch-insta.js script saves profile pics as /artists/{name}.jpg
 */
function resolveArtistImage(artist: Artist): string {
  // Extract the artist folder name from the image path (e.g., /artists/david.svg → david)
  const match = artist.image.match(/\/artists\/(\w+)\./);
  if (match) {
    const name = match[1];
    const jpgPath = `/artists/${name}.jpg`;
    const jpgAbsolute = resolve(process.cwd(), `public${jpgPath}`);
    if (existsSync(jpgAbsolute)) {
      return jpgPath;
    }
  }
  return artist.image; // Fallback to configured image (SVG placeholder)
}
---

<SectionWrapper id={id} backgroundImage={backgroundImage}>
  <div class="w-full max-w-5xl mx-4 sm:mx-8 lg:mx-auto space-y-12">
    {
      title && (
        <h2
          class="text-gradient-white text-3xl sm:text-4xl lg:text-5xl font-bold text-center tracking-[-0.02em]"
          data-animate-heading
        >
          {title}
        </h2>
      )
    }

    <div class="space-y-16 sm:space-y-24">
      {
        artists.map((artist, index) => {
          const imageSrc = resolveArtistImage(artist);
          const isEven = index % 2 === 0;

          return (
            <>
              {/* Decorative divider between artists */}
              {index > 0 && (
                <div
                  class="section-divider-ornament mx-auto"
                  data-animate-scale
                />
              )}
              <div
                class={`flex flex-col md:flex-row items-center gap-8 md:gap-16 lg:gap-24 ${!isEven ? "md:flex-row-reverse" : ""}`}
              >
                {/* Image Side — clip-path reveal + parallax */}
                <div
                  class="w-full md:w-1/2 flex justify-center"
                  data-parallax="0.08"
                >
                  <div
                    class="relative w-64 h-64 sm:w-72 sm:h-72 lg:w-80 lg:h-80 group ambient-glow"
                    data-animate-clip
                  >
                    <div class="absolute inset-0 rounded-[2rem] rotate-3 bg-white/[0.03] border border-white/[0.05] transition-transform duration-500 group-hover:rotate-6" />
                    <div class="absolute inset-0 rounded-[2rem] -rotate-2 bg-white/[0.03] border border-white/[0.05] transition-transform duration-500 group-hover:-rotate-4" />
                    <div class="relative w-full h-full rounded-[2rem] overflow-hidden transition-all duration-700">
                      <img
                        src={imageSrc}
                        alt={artist.name}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                      <div class="absolute inset-0 ring-1 ring-inset ring-white/10 rounded-[2rem]" />
                    </div>
                  </div>
                </div>

                {/* Content Side — directional slide */}
                <div
                  class={`w-full md:w-1/2 text-center ${isEven ? "md:text-left" : "md:text-right"} space-y-6`}
                  data-animate-left={isEven ? "" : undefined}
                  data-animate-right={!isEven ? "" : undefined}
                >
                  <div>
                    <h3 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight mb-2">
                      {artist.name}
                    </h3>
                    <p class="text-[var(--color-gold)] text-lg uppercase tracking-widest font-medium opacity-80">
                      {artist.role}
                    </p>
                  </div>

                  <p class="text-white/60 text-lg sm:text-xl font-light leading-relaxed max-w-md mx-auto md:mx-0">
                    Specializing in custom designs that tell your unique story.
                  </p>

                  {artist.instagram && (
                    <div
                      class={`flex ${isEven ? "md:justify-start" : "md:justify-end"} justify-center pt-2`}
                    >
                      <a
                        href={`https://instagram.com/${artist.instagram.replace("@", "")}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group inline-flex items-center gap-3 text-[var(--color-gold)] hover:text-[var(--color-gold-light)] transition-all duration-300"
                      >
                        <span class="w-10 h-10 rounded-full border border-[var(--color-gold)]/30 flex items-center justify-center group-hover:border-[var(--color-gold)] group-hover:bg-[var(--color-gold)]/10 transition-all">
                          <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
                          </svg>
                        </span>
                        <span class="text-sm tracking-wide font-medium">
                          Follow Profile
                        </span>
                      </a>
                    </div>
                  )}

                  {/* Portfolio link */}
                  {(() => {
                    const artistId =
                      artist.image.match(/\/artists\/(\w+)\./)?.[1];
                    return artistId ? (
                      <div
                        class={`flex ${isEven ? "md:justify-start" : "md:justify-end"} justify-center pt-1`}
                      >
                        <a
                          href={`/artists/${artistId}`}
                          class="group inline-flex items-center gap-2 text-white/40 hover:text-[var(--color-gold)] transition-all duration-300 text-sm tracking-wide font-medium"
                        >
                          Ver Portfolio
                          <svg
                            class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="2"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
                            />
                          </svg>
                        </a>
                      </div>
                    ) : null;
                  })()}
                </div>
              </div>
            </>
          );
        })
      }
    </div>
  </div>
</SectionWrapper>
