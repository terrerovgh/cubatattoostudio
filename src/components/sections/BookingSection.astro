---
import GlassCard from "../GlassCard.astro";
import SectionWrapper from "../SectionWrapper.astro";

interface Props {
  id: string;
  backgroundImage: string;
  title?: string;
  subtitle?: string;
  bookingUrl?: string;
  phone?: string;
  email?: string;
  address?: string;
}

const {
  id,
  backgroundImage,
  title,
  subtitle,
  bookingUrl,
  phone,
  email,
  address,
} = Astro.props;
---

<SectionWrapper id={id} backgroundImage={backgroundImage}>
  <GlassCard maxWidth="max-w-5xl">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {
        /* 1. Main Booking CTA - Spans full width on desktop if desired, or just huge top block */
      }
      <div
        class="md:col-span-2 relative overflow-hidden group rounded-[32px] bg-[var(--color-gold)] p-8 sm:p-12 flex flex-col items-center justify-center text-center space-y-8"
      >
        <div class="relative z-10 space-y-6">
          <h2 class="text-3xl md:text-5xl font-bold text-black tracking-tight">
            {title || "Ready to start?"}
          </h2>
          <p
            class="text-black/70 text-lg md:text-xl max-w-lg mx-auto font-medium"
          >
            {subtitle || "Book your consultation today."}
          </p>

          <a
            href={bookingUrl || "#"}
            class="inline-flex items-center gap-3 px-8 py-4 rounded-xl
                     bg-black text-white font-semibold text-lg
                     transition-transform duration-300 hover:scale-[1.03]"
          >
            <span>Book Appointment</span>
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
            </svg>
          </a>
        </div>
        {/* Decorative background or pattern could go here */}
        <div
          class="absolute inset-0 bg-white/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
      </div>

      {/* 2. Contact Info Block */}
      <div
        class="rounded-[32px] bg-white/[0.03] border border-white/[0.05] p-8 flex flex-col justify-between space-y-8 hover:bg-white/[0.05] transition-colors duration-300"
      >
        <div>
          <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
            <span
              class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center text-sm"
              >üìç</span
            >
            Contact Us
          </h3>
          <div class="space-y-4">
            {
              phone && (
                <a
                  href={`tel:${phone.replace(/[^+\d]/g, "")}`}
                  class="flex items-center gap-4 text-white/60 hover:text-white transition-colors"
                >
                  <span class="text-[var(--color-gold)]">Phone</span>
                  <span>{phone}</span>
                </a>
              )
            }
            {
              email && (
                <a
                  href={`mailto:${email}`}
                  class="flex items-center gap-4 text-white/60 hover:text-white transition-colors"
                >
                  <span class="text-[var(--color-gold)]">Email</span>
                  <span>{email}</span>
                </a>
              )
            }
            {
              address && (
                <div class="flex items-center gap-4 text-white/60">
                  <span class="text-[var(--color-gold)]">Studio</span>
                  <span>{address}</span>
                </div>
              )
            }
          </div>
        </div>
      </div>

      {/* 3. Socials / Connect Block */}
      <div
        class="rounded-[32px] bg-white/[0.03] border border-white/[0.05] p-8 flex flex-col justify-center items-center text-center space-y-6 hover:bg-white/[0.05] transition-colors duration-300"
      >
        <h3 class="text-xl font-bold text-white mb-2">Follow Our Work</h3>
        <p class="text-white/40 text-sm max-w-xs">
          Check out our latest tattoos and flashes on Instagram.
        </p>

        <div class="flex gap-4">
          <a
            href="https://instagram.com/cubatatoostudio"
            target="_blank"
            rel="noopener noreferrer"
            class="w-14 h-14 rounded-full bg-white/5 border border-white/10 flex items-center justify-center hover:bg-[var(--color-gold)] hover:text-black hover:border-[var(--color-gold)] transition-all duration-300 group"
            aria-label="Instagram"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"
              ></path>
            </svg>
          </a>
          <a
            href="https://facebook.com/cubatattoostudio"
            target="_blank"
            rel="noopener noreferrer"
            class="w-14 h-14 rounded-full bg-white/5 border border-white/10 flex items-center justify-center hover:bg-[var(--color-gold)] hover:text-black hover:border-[var(--color-gold)] transition-all duration-300 group"
            aria-label="Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </GlassCard>
</SectionWrapper>
