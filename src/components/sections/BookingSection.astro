---
import GlassCard from '../GlassCard.astro';
import SectionWrapper from '../SectionWrapper.astro';

interface Props {
  id: string;
  backgroundImage: string;
  title?: string;
  subtitle?: string;
  bookingUrl?: string;
  phone?: string;
  email?: string;
  address?: string;
}

const { id, backgroundImage, title, subtitle, bookingUrl, phone, email, address } = Astro.props;
---

<SectionWrapper id={id} backgroundImage={backgroundImage}>
  <GlassCard class="text-center" maxWidth="max-w-2xl" elevated glow>
    <div class="space-y-10">
      {title && (
        <h2 class="text-gradient-white text-3xl sm:text-4xl lg:text-5xl font-bold tracking-[-0.02em]">
          {title}
        </h2>
      )}
      {subtitle && (
        <p class="text-lg text-white/40 max-w-md mx-auto font-light leading-relaxed">
          {subtitle}
        </p>
      )}

      {/* CTA Button */}
      <div>
        <a
          href={bookingUrl || '#'}
          class="group inline-flex items-center gap-3 px-10 py-5 rounded-2xl
                 bg-[var(--color-gold)] text-black font-semibold text-lg
                 transition-all duration-500 ease-out
                 hover:shadow-[0_8px_30px_rgba(200,149,108,0.3)]
                 hover:scale-[1.03] active:scale-[0.98]"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Book a Consultation
          <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>

      {/* Contact Info â€” Apple-style stacked layout */}
      <div class="pt-4 flex flex-col items-center gap-3">
        {phone && (
          <a
            href={`tel:${phone.replace(/[^+\d]/g, '')}`}
            class="inline-flex items-center gap-2.5 px-5 py-2.5 rounded-xl
                   bg-white/[0.04] border border-white/[0.06]
                   text-sm text-white/50 hover:text-white/80 hover:bg-white/[0.06]
                   transition-all duration-300"
          >
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
            {phone}
          </a>
        )}
        {email && (
          <a
            href={`mailto:${email}`}
            class="inline-flex items-center gap-2.5 px-5 py-2.5 rounded-xl
                   bg-white/[0.04] border border-white/[0.06]
                   text-sm text-white/50 hover:text-white/80 hover:bg-white/[0.06]
                   transition-all duration-300"
          >
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
            {email}
          </a>
        )}
        {address && (
          <span class="inline-flex items-center gap-2.5 px-5 py-2.5 rounded-xl text-sm text-white/30">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
            {address}
          </span>
        )}
      </div>

      {/* Social Links */}
      <div class="flex justify-center gap-3 pt-2">
        <a
          href="https://instagram.com/cubatatoostudio"
          target="_blank"
          rel="noopener noreferrer"
          class="w-11 h-11 rounded-2xl liquid-glass
                 flex items-center justify-center
                 hover:border-[var(--color-glass-border-hover)]
                 transition-all duration-300 hover:scale-105"
          aria-label="Instagram"
        >
          <svg class="w-[18px] h-[18px] text-white/50" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
          </svg>
        </a>
        <a
          href="https://facebook.com/cubatattoostudio"
          target="_blank"
          rel="noopener noreferrer"
          class="w-11 h-11 rounded-2xl liquid-glass
                 flex items-center justify-center
                 hover:border-[var(--color-glass-border-hover)]
                 transition-all duration-300 hover:scale-105"
          aria-label="Facebook"
        >
          <svg class="w-[18px] h-[18px] text-white/50" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
          </svg>
        </a>
      </div>
    </div>
  </GlassCard>
</SectionWrapper>
