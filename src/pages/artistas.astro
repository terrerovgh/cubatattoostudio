---
import Layout from "@/layouts/Layout.astro"
import Header from "@/components/layout/Header.astro"
import Footer from "@/components/layout/Footer.astro"
import Button from "@/components/ui/Button.astro"
import Card from "@/components/ui/Card.astro"
import Badge from "@/components/ui/Badge.astro"
import FadeInSection from "@/components/animations/FadeInSection.astro"
import SlideInImage from "@/components/animations/SlideInImage.astro"
import StaggerText from "@/components/animations/StaggerText.astro"
import ParallaxContainer from "@/components/animations/ParallaxContainer.astro"
import ParticleSystem from "@/components/effects/ParticleSystem.astro"
import artistsData from "@/data/artists.json"

const { artists } = artistsData;

// SEO and structured data for artists
const seoData = {
  title: "Our Professional Artists - Specialized Tattoo Artists | Cuba Tattoo Studio",
  description: `Meet our ${artists.length} professional artists specialized in realism, blackwork, traditional and more styles. Combined experience of over 30 years in Albuquerque, NM.`,
  keywords: ["tattoo artists albuquerque", "professional tattoo artists new mexico", "realism blackwork specialists", "cuba tattoo studio artists", "experienced tattoo artists", "best tattoo artists albuquerque"],
  image: "https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=professional%20tattoo%20artists%20team%20cuba%20tattoo%20studio%20albuquerque%20group%20portrait&image_size=landscape_16_9",
  structuredDataType: "Person"
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  image={seoData.image}
  structuredDataType={seoData.structuredDataType}
>
  <Header />
  
  <main class="bg-cuba-black text-cuba-white min-h-screen">
    <!-- Hero Section Cinematográfico -->
    <ParallaxContainer intensity="strong" pin={true} class="h-screen">
      <section class="relative h-screen flex items-center justify-center overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-b from-cuba-black/70 to-cuba-black z-10"></div>
        <SlideInImage 
          src="https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20view%20of%20professional%20tattoo%20artists%20working%20in%20modern%20studio%2C%20dramatic%20black%20and%20white%20lighting%2C%20artistic%20atmosphere%2C%20creative%20workspace%2C%20multiple%20artists%20collaborating%2C%20film%20noir%20style&image_size=landscape_16_9"
          alt="Cuba Tattoo Studio artists working"
          direction="left"
          intensity="strong"
          parallax={true}
          class="absolute inset-0 w-full h-full"
        />
        
        <ParticleSystem 
          variant="floating" 
          density="medium" 
          color="white" 
          size="md" 
          speed="medium" 
          interactive={true}
          class="opacity-20 z-20"
        />
        
        <FadeInSection delay={0.8} intensity="strong" class="relative z-30 text-center max-w-4xl mx-auto px-6">
          <StaggerText 
            tag="h1" 
            text="OUR ARTISTS"
            splitBy="words"
            delay={1.2}
            stagger={0.15}
            intensity="strong"
            class="font-heading text-6xl md:text-8xl lg:text-9xl uppercase tracking-wider mb-6"
          />
          <StaggerText 
            tag="p" 
            text="Every stroke tells a story. Meet the masters behind the art"
            splitBy="words"
            delay={1.8}
            stagger={0.08}
            intensity="medium"
            class="font-body text-xl md:text-2xl text-cuba-gray-400 max-w-2xl mx-auto leading-relaxed"
          />
        </FadeInSection>
      </section>
    </ParallaxContainer>

    <!-- Cinematic Artists Grid -->
    <FadeInSection delay={0.5} intensity="medium" class="py-20 px-6">
      <section class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
          {artists.map((artist, index) => (
            <ParallaxContainer 
              speed={0.3} 
              intensity="subtle" 
              class="group cursor-pointer"
            >
              <Card 
                variant="glass" 
                hover="glow" 
                href={`/artistas/${artist.slug}`}
                class="h-full transition-all duration-700 hover:scale-105 overflow-hidden"
              >
                <div class="relative overflow-hidden rounded-lg mb-6">
                  <SlideInImage 
                    src={`https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=professional%20tattoo%20artist%20${artist.name.toLowerCase()}%20portrait%20black%20and%20white%20studio%20lighting%20confident%20pose&image_size=portrait_4_3`}
                    alt={`${artist.name} - Tattoo Artist`}
                    direction={index % 2 === 0 ? 'left' : 'right'}
                    delay={index * 0.2}
                    intensity="medium"
                    parallax={true}
                    class="w-full h-80 transition-transform duration-700 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                  <div class="absolute bottom-4 left-4 right-4 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500 opacity-0 group-hover:opacity-100">
                    <Button 
                      href={`/artistas/${artist.slug}`}
                      variant="outline"
                      size="sm"
                      class="w-full backdrop-blur-sm"
                    >
                      View Profile
                    </Button>
                  </div>
                </div>
                
                <div class="space-y-4 p-6">
                  <div>
                    <StaggerText 
                      tag="h3" 
                      text={artist.name}
                      splitBy="chars"
                      delay={index * 0.1 + 0.5}
                      stagger={0.05}
                      intensity="subtle"
                      class="text-2xl font-heading text-white uppercase tracking-wide mb-2"
                    />
                    <StaggerText 
                      tag="p" 
                      text={artist.bio}
                      splitBy="words"
                      delay={index * 0.1 + 0.8}
                      stagger={0.03}
                      intensity="subtle"
                      class="text-gray-400 font-body leading-relaxed line-clamp-4"
                    />
                  </div>
                  
                  <FadeInSection delay={index * 0.1 + 1.2} intensity="subtle">
                    <div class="flex flex-wrap gap-2">
                      {artist.specialties.map((specialty) => (
                        <Badge variant="outline" size="sm" class="transition-all duration-300 hover:bg-white hover:text-black">
                          {specialty}
                        </Badge>
                      ))}
                    </div>
                  </FadeInSection>
                  
                  <FadeInSection delay={index * 0.1 + 1.5} intensity="subtle">
                    <div class="pt-4 border-t border-gray-700">
                      <div class="flex items-center justify-between text-sm text-gray-400">
                        <span>Experience: {artist.experience}</span>
                        <div class="space-y-1">
                          <a 
                            href={`https://instagram.com/${artist.contact.instagram.replace('@', '')}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="block text-cuba-white hover:text-cuba-gray-400 transition-colors duration-300 text-xs font-body transform hover:translate-x-1"
                            onclick="event.stopPropagation()"
                          >
                            {artist.contact.instagram}
                          </a>
                        </div>
                      </div>
                    </div>
                  </FadeInSection>
                  
                  <FadeInSection delay={index * 0.1 + 1.8} intensity="subtle">
                    <div class="flex flex-col sm:flex-row gap-3 transform group-hover:translate-y-1 transition-transform duration-300">
                      <Button 
                        href={`/artistas/${artist.slug}`} 
                        variant="primary" 
                        size="sm" 
                        class="flex-1"
                        animated={true}
                      >
                        View Portfolio
                      </Button>
                      <Button 
                        href={`/reservas?artist=${artist.slug}`} 
                        variant="outline" 
                        size="sm" 
                        class="flex-1"
                        animated={true}
                      >
                        Book Now
                      </Button>
                    </div>
                  </FadeInSection>
                </div>
              </Card>
            </ParallaxContainer>
          ))}
        </div>
      </section>
    </FadeInSection>

    <!-- Sección de CTA Cinematográfica -->
    <ParallaxContainer intensity="medium" class="py-32 bg-gradient-to-t from-black via-gray-900 to-black">
      <FadeInSection delay={0.3} intensity="strong" class="text-center">
        <section class="max-w-4xl mx-auto px-6">
          <SlideInImage 
            src="https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20close-up%20of%20tattoo%20needle%20and%20ink%2C%20dramatic%20black%20and%20white%20lighting%2C%20artistic%20composition%2C%20professional%20tattoo%20equipment%2C%20film%20noir%20style&image_size=landscape_4_3"
            alt="Professional tattoo equipment"
            direction="up"
            intensity="subtle"
            parallax={true}
            class="w-32 h-32 mx-auto mb-12 rounded-full opacity-20"
          />
          
          <StaggerText 
            tag="h2" 
            text="READY FOR YOUR NEXT TATTOO?"
            splitBy="words"
            delay={0.8}
            stagger={0.12}
            intensity="strong"
            class="text-4xl md:text-6xl font-heading text-white uppercase tracking-wider mb-8"
          />
          
          <StaggerText 
            tag="p" 
            text="Our artists are waiting to turn your vision into a permanent work of art. Schedule your free consultation today."
            splitBy="words"
            delay={1.5}
            stagger={0.05}
            intensity="medium"
            class="text-xl text-gray-400 font-body leading-relaxed mb-12 max-w-2xl mx-auto"
          />
          
          <FadeInSection delay={2.2} intensity="medium">
            <div class="flex flex-col sm:flex-row gap-6 justify-center">
              <Button 
                href="/reservas" 
                variant="primary" 
                size="lg"
                class="px-12 py-4 text-lg font-semibold transition-all duration-500 hover:scale-105 hover:shadow-2xl"
                animated={true}
              >
                Book Consultation
              </Button>
              <Button 
                href="/portfolio" 
                variant="outline" 
                size="lg"
                class="px-12 py-4 text-lg font-semibold transition-all duration-500 hover:scale-105 hover:bg-white hover:text-black"
                animated={true}
              >
                View Portfolio
              </Button>
            </div>
          </FadeInSection>
          
          <!-- Elementos decorativos cinematográficos -->
          <FadeInSection delay={2.8} intensity="subtle">
            <div class="mt-16 flex justify-center space-x-8 opacity-30">
              <div class="w-px h-16 bg-gradient-to-b from-transparent via-white to-transparent"></div>
              <div class="w-px h-20 bg-gradient-to-b from-transparent via-white to-transparent"></div>
              <div class="w-px h-16 bg-gradient-to-b from-transparent via-white to-transparent"></div>
            </div>
          </FadeInSection>
        </section>
      </FadeInSection>
    </ParallaxContainer>

    <!-- Additional Cinematic Information -->
    <FadeInSection delay={0.2} intensity="medium" class="py-20 bg-gray-900">
      <section class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div>
            <StaggerText 
              tag="h3" 
              text="SELECTION PROCESS"
              splitBy="words"
              delay={0.5}
              stagger={0.1}
              intensity="medium"
              class="text-3xl font-heading text-white uppercase tracking-wide mb-8"
            />
            
            <div class="space-y-6">
              <FadeInSection delay={0.8} intensity="subtle">
                <p class="text-gray-300 font-body leading-relaxed text-lg">
                  Each artist at Cuba Tattoo Studio has been carefully selected for their exceptional technique, 
                  creativity and commitment to artistic excellence.
                </p>
              </FadeInSection>
              
              <FadeInSection delay={1.1} intensity="subtle">
                <p class="text-gray-300 font-body leading-relaxed text-lg">
                  All our professionals have safety and hygiene certifications, 
                  and regularly participate in workshops and conventions to stay up to date with the latest trends.
                </p>
              </FadeInSection>
              
              <FadeInSection delay={1.4} intensity="subtle">
                <p class="text-gray-300 font-body leading-relaxed text-lg">
                  Before each session, we conduct a detailed consultation to ensure that the artist 
                  and client are perfectly aligned on the project vision.
                </p>
              </FadeInSection>
            </div>
          </div>
          
          <ParallaxContainer speed={0.4} intensity="medium">
            <div class="relative">
              <SlideInImage 
                src="https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20professional%20tattoo%20studio%20workspace%20black%20and%20white%20clean%20organized%20equipment%20artistic%20atmosphere%20dramatic%20lighting%20film%20noir&image_size=square_hd"
                alt="Professional tattoo studio"
                direction="right"
                delay={0.6}
                intensity="medium"
                parallax={true}
                class="w-full rounded-lg shadow-2xl"
              />
              <div class="absolute inset-0 bg-gradient-to-tr from-black/30 to-transparent rounded-lg"></div>
              
              <!-- Elementos decorativos cinematográficos -->
              <div class="absolute -top-4 -left-4 w-8 h-8 border-l-2 border-t-2 border-white opacity-30"></div>
              <div class="absolute -bottom-4 -right-4 w-8 h-8 border-r-2 border-b-2 border-white opacity-30"></div>
            </div>
          </ParallaxContainer>
        </div>
        
        <!-- Grid de características cinematográfico -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-20">
          <FadeInSection delay={1.8} intensity="medium">
            <div class="text-center group">
              <div class="w-20 h-20 bg-gradient-to-br from-gray-700 to-gray-800 mx-auto mb-6 flex items-center justify-center rounded-lg transform group-hover:scale-110 transition-transform duration-500">
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <h4 class="text-xl font-heading text-white uppercase tracking-wider mb-3">
                Certified
              </h4>
              <p class="text-gray-400 font-body leading-relaxed">
                All our artists are certified and meet the highest standards of hygiene and safety.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={2.1} intensity="medium">
            <div class="text-center group">
              <div class="w-20 h-20 bg-gradient-to-br from-gray-700 to-gray-800 mx-auto mb-6 flex items-center justify-center rounded-lg transform group-hover:scale-110 transition-transform duration-500">
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h4 class="text-xl font-heading text-white uppercase tracking-wider mb-3">
                Experience
              </h4>
              <p class="text-gray-400 font-body leading-relaxed">
                Over 10 years of combined experience in different tattoo styles and techniques.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={2.4} intensity="medium">
            <div class="text-center group">
              <div class="w-20 h-20 bg-gradient-to-br from-gray-700 to-gray-800 mx-auto mb-6 flex items-center justify-center rounded-lg transform group-hover:scale-110 transition-transform duration-500">
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                </svg>
              </div>
              <h4 class="text-xl font-heading text-white uppercase tracking-wider mb-3">
                Passion
              </h4>
              <p class="text-gray-400 font-body leading-relaxed">
                Each artist brings their unique passion and artistic vision to create truly unique tattoos.
              </p>
            </div>
          </FadeInSection>
        </div>
      </section>
    </FadeInSection>
  </main>
  
  <Footer />
</Layout>

<style>
  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>