---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import BookingForm from '../components/forms/BookingForm.astro';
import Badge from '../components/ui/Badge.astro';
import ParticleSystem from '../components/effects/ParticleSystem.astro';
// Componentes cinematográficos
import FadeInSection from '../components/animations/FadeInSection.astro';
import SlideInImage from '../components/animations/SlideInImage.astro';
import StaggerText from '../components/animations/StaggerText.astro';
import ParallaxContainer from '../components/animations/ParallaxContainer.astro';

// SEO configuration and structured data
const seoData = {
  title: "Book Appointment | Cuba Tattoo Studio - Schedule Your Tattoo Session",
  description: "Schedule your appointment at Cuba Tattoo Studio Albuquerque. Online booking form, free consultation, contact information and location. Flexible hours available.",
  keywords: "book tattoo appointment, schedule tattoo Albuquerque, Cuba Tattoo Studio booking, free tattoo consultation, tattoo appointment booking, tattoo studio appointment",
  image: `https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=${encodeURIComponent('professional tattoo studio booking area, modern reception desk, appointment scheduling, clean minimalist design, comfortable waiting area, Albuquerque tattoo studio')}&image_size=landscape_16_9`,
  structuredDataType: 'LocalBusiness'
};
---

<Layout {...seoData}>
  <Header />
  
  <main class="bg-black text-white min-h-screen">
    <!-- Hero Section Cinematográfico -->
    <ParallaxContainer speed={0.3} intensity="high" class="relative h-screen flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-black z-10"></div>
      <SlideInImage 
        src="https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20modern%20tattoo%20studio%20reception%20area%2C%20clean%20minimalist%20design%2C%20black%20and%20white%20aesthetic%2C%20comfortable%20seating%2C%20professional%20atmosphere%2C%20appointment%20booking%20area%2C%20dramatic%20lighting%2C%20film%20noir%20style&image_size=landscape_16_9" 
        alt="Cuba Tattoo Studio reception area" 
        class="absolute inset-0 w-full h-full object-cover"
        direction="zoom"
        intensity="medium"
        delay={0.2}
      />
      
      <ParticleSystem 
        variant="floating" 
        density="low" 
        color="white" 
        size="sm" 
        speed="slow" 
        interactive={false}
        class="opacity-30 z-15"
      />
      
      <div class="relative z-20 text-center max-w-5xl mx-auto px-6">
        <FadeInSection delay={0.5} intensity="high" class="space-y-8">
          <StaggerText 
            text="BOOK YOUR APPOINTMENT"
            element="h1" 
            class="font-bebas text-7xl md:text-9xl lg:text-[12rem] uppercase tracking-wider text-white leading-none"
            delay={0.6}
            staggerDelay={0.1}
          />
          <div class="w-40 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
          <p class="font-inter text-2xl md:text-3xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            The first step towards your new work of art. Schedule your free consultation today
          </p>
        </FadeInSection>
        
        <!-- Elementos decorativos -->
        <div class="absolute -top-32 -left-32 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-32 -right-32 w-80 h-80 bg-white/3 rounded-full blur-3xl"></div>
      </div>
    </ParallaxContainer>

    <!-- Contact Info Section Cinematográfico -->
    <ParallaxContainer speed={0.2} intensity="medium" class="py-32 px-6 bg-gradient-to-b from-gray-900 via-black to-gray-900 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-black/30 to-transparent"></div>
      <div class="max-w-6xl mx-auto relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="text-center mb-20 space-y-6">
          <StaggerText 
            text="CONTACT INFORMATION"
            element="h2" 
            class="font-bebas text-5xl md:text-7xl uppercase tracking-wider text-white"
            delay={0.3}
            staggerDelay={0.06}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
          <p class="font-inter text-xl md:text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed">
            We're here to help you create the perfect work of art. 
            Contact us by any means or visit us at our studio.
          </p>
        </FadeInSection>
        
        <div class="grid md:grid-cols-3 gap-12 mb-20">
          <FadeInSection delay={0.4} intensity="medium">
            <div class="text-center space-y-6 group">
              <div class="w-20 h-20 mx-auto border-2 border-white rounded-full flex items-center justify-center group-hover:bg-white group-hover:text-black transition-all duration-500">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Location</h3>
              <div class="font-inter text-gray-300 space-y-2 text-lg">
                <p>123 Central Avenue NW</p>
                <p>Albuquerque, NM 87102</p>
                <p>United States</p>
              </div>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.5} intensity="medium">
            <div class="text-center space-y-6 group">
              <div class="w-20 h-20 mx-auto border-2 border-white rounded-full flex items-center justify-center group-hover:bg-white group-hover:text-black transition-all duration-500">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Phone</h3>
              <div class="font-inter text-gray-300 space-y-2 text-lg">
                <p>(505) 555-CUBA</p>
                <p>(505) 555-2822</p>
                <p class="text-base">Mon-Sat: 10:00 AM - 8:00 PM</p>
              </div>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.6} intensity="medium">
            <div class="text-center space-y-6 group">
              <div class="w-20 h-20 mx-auto border-2 border-white rounded-full flex items-center justify-center group-hover:bg-white group-hover:text-black transition-all duration-500">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Email</h3>
              <div class="font-inter text-gray-300 space-y-2 text-lg">
                <p>info@cubatattoostudio.com</p>
                <p>bookings@cubatattoostudio.com</p>
                <p class="text-base">Response within 24 hours</p>
              </div>
            </div>
          </FadeInSection>
        </div>
        
        <!-- Elementos decorativos -->
        <div class="absolute top-20 right-10 w-32 h-32 bg-white/5 rounded-full blur-2xl"></div>
        <div class="absolute bottom-20 left-10 w-48 h-48 bg-white/3 rounded-full blur-3xl"></div>
      </div>
    </ParallaxContainer>

    <!-- Booking Form Section Cinematográfico -->
    <ParallaxContainer speed={0.1} intensity="low" class="py-32 px-6 bg-gradient-to-b from-black via-gray-900 to-black relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-black/20 via-transparent to-black/20"></div>
      <div class="max-w-5xl mx-auto relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="text-center mb-16 space-y-6">
          <StaggerText 
            text="BOOKING FORM"
            element="h2" 
            class="font-bebas text-5xl md:text-7xl uppercase tracking-wider text-white"
            delay={0.3}
            staggerDelay={0.06}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
          <p class="font-inter text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Complete the form and we'll get in touch with you to confirm 
            your appointment and discuss the details of your tattoo.
          </p>
        </FadeInSection>
        
        <FadeInSection delay={0.5} intensity="medium">
          <div class="bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900 rounded-2xl p-8 md:p-16 border border-gray-700 shadow-2xl backdrop-blur-sm">
            <BookingForm />
          </div>
        </FadeInSection>
        
        <!-- Elementos decorativos -->
        <div class="absolute -top-20 -left-20 w-40 h-40 bg-white/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-20 -right-20 w-60 h-60 bg-white/3 rounded-full blur-3xl"></div>
      </div>
    </ParallaxContainer>

    <!-- Map Section Cinematográfico -->
    <ParallaxContainer speed={0.3} intensity="medium" class="py-32 px-6 bg-gradient-to-b from-gray-900 via-black to-gray-900 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-black/40 to-transparent"></div>
      <div class="max-w-6xl mx-auto relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="text-center mb-16 space-y-6">
          <StaggerText 
            text="FIND US"
            element="h2" 
            class="font-bebas text-5xl md:text-7xl uppercase tracking-wider text-white"
            delay={0.3}
            staggerDelay={0.06}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
          <p class="font-inter text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Located in the heart of Albuquerque, with easy access and parking available
          </p>
        </FadeInSection>
        
        <div class="grid lg:grid-cols-2 gap-16 items-start">
          <!-- Map Placeholder -->
          <FadeInSection delay={0.4} intensity="medium">
            <div class="relative h-[500px] bg-gradient-to-b from-gray-800 to-gray-900 rounded-2xl overflow-hidden border border-gray-700 shadow-2xl">
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center space-y-6">
                  <svg class="w-20 h-20 mx-auto text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div class="font-inter text-gray-300">
                    <p class="font-semibold text-xl">Cuba Tattoo Studio</p>
                    <p class="text-lg">123 Central Avenue NW</p>
                    <p class="text-lg">Albuquerque, NM 87102</p>
                  </div>
                </div>
              </div>
              <!-- In a real implementation, you would embed Google Maps or similar -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            </div>
          </FadeInSection>
          
          <!-- Directions & Info -->
          <div class="space-y-10">
            <FadeInSection delay={0.5} intensity="medium">
              <div>
                <h3 class="font-bebas text-3xl uppercase tracking-wider mb-6 text-white">Business Hours</h3>
                <div class="font-inter text-gray-300 space-y-3 text-lg">
                  <div class="flex justify-between border-b border-gray-700 pb-2">
                    <span>Monday - Friday:</span>
                    <span>10:00 AM - 8:00 PM</span>
                  </div>
                  <div class="flex justify-between border-b border-gray-700 pb-2">
                    <span>Saturday:</span>
                    <span>10:00 AM - 6:00 PM</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Sunday:</span>
                    <span>Closed</span>
                  </div>
                </div>
              </div>
            </FadeInSection>
            
            <FadeInSection delay={0.6} intensity="medium">
              <div>
                <h3 class="font-bebas text-3xl uppercase tracking-wider mb-6 text-white">Additional Information</h3>
                <div class="font-inter text-gray-300 space-y-4 leading-relaxed">
                  <div class="flex items-center gap-3">
                    <Badge variant="glow" size="sm" class="text-sm">✓</Badge>
                    <span>Free parking available</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <Badge variant="glow" size="sm" class="text-sm">✓</Badge>
                    <span>Wheelchair accessible</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <Badge variant="glow" size="sm" class="text-sm">✓</Badge>
                    <span>Free consultations with no commitment</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <Badge variant="glow" size="sm" class="text-sm">✓</Badge>
                    <span>Sterile and professional environment</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <Badge variant="glow" size="sm" class="text-sm">✓</Badge>
                    <span>Updated health certifications</span>
                  </div>
                </div>
              </div>
            </FadeInSection>
            
            <FadeInSection delay={0.7} intensity="medium">
              <div>
                <h3 class="font-bebas text-3xl uppercase tracking-wider mb-6 text-white">Appointment Policy</h3>
                <div class="font-inter text-gray-300 space-y-3 leading-relaxed">
                  <p>• $100 deposit required to book</p>
                  <p>• Cancellations with 48h notice</p>
                  <p>• Bring valid ID on appointment day</p>
                  <p>• 18+ years old (minors with legal guardian)</p>
                  <p>• No alcohol consumption 24h before session</p>
                </div>
              </div>
            </FadeInSection>
          </div>
        </div>
        
        <!-- Elementos decorativos -->
        <div class="absolute top-20 right-10 w-40 h-40 bg-white/5 rounded-full blur-2xl"></div>
        <div class="absolute bottom-20 left-10 w-56 h-56 bg-white/3 rounded-full blur-3xl"></div>
      </div>
    </ParallaxContainer>

    <!-- Social Media & Final CTA Cinematográfico -->
    <ParallaxContainer speed={0.4} intensity="high" class="py-32 px-6 bg-gradient-to-b from-black via-gray-900 to-black relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-black/50 via-transparent to-black/50"></div>
      <div class="absolute inset-0">
        <div class="w-full h-full bg-gradient-to-t from-black via-transparent to-black opacity-70"></div>
      </div>
      <div class="max-w-5xl mx-auto text-center relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="space-y-8">
          <StaggerText 
            text="FOLLOW US"
            element="h2" 
            class="font-bebas text-6xl md:text-8xl uppercase tracking-wider text-white leading-tight"
            delay={0.3}
            staggerDelay={0.08}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
          <p class="font-inter text-2xl md:text-3xl text-gray-300 max-w-4xl mx-auto leading-relaxed">
            Stay up to date with our latest work and special promotions
          </p>
        </FadeInSection>
        
        <FadeInSection delay={0.5} intensity="medium" class="pt-12">
          <div class="flex justify-center space-x-12 mb-16">
            <a href="https://instagram.com/cubatattoostudio" 
               class="w-20 h-20 border-2 border-white rounded-full flex items-center justify-center hover:bg-white hover:text-black hover:scale-110 transition-all duration-500 group"
               target="_blank" rel="noopener noreferrer">
              <svg class="w-10 h-10 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a href="https://facebook.com/cubatattoostudio" 
               class="w-20 h-20 border-2 border-white rounded-full flex items-center justify-center hover:bg-white hover:text-black hover:scale-110 transition-all duration-500 group"
               target="_blank" rel="noopener noreferrer">
              <svg class="w-10 h-10 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="https://tiktok.com/@cubatattoostudio" 
               class="w-20 h-20 border-2 border-white rounded-full flex items-center justify-center hover:bg-white hover:text-black hover:scale-110 transition-all duration-500 group"
               target="_blank" rel="noopener noreferrer">
              <svg class="w-10 h-10 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-.88-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
              </svg>
            </a>
          </div>
          
          <div class="border-t border-gray-700 pt-12">
            <p class="font-inter text-gray-400 text-lg">
              Have questions? Call us at (505) 555-CUBA or send us an email at info@cubatattoostudio.com
            </p>
          </div>
        </FadeInSection>
        
        <!-- Elementos decorativos -->
        <div class="absolute -top-20 -left-20 w-40 h-40 bg-white/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-20 -right-20 w-60 h-60 bg-white/3 rounded-full blur-3xl"></div>
      </div>
    </ParallaxContainer>
  </main>

  <Footer />
</Layout>

<style>
  .gsap-element {
    opacity: 0;
    transform: translateY(30px);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Hero animation
  gsap.timeline()
    .from('h1', { 
      duration: 1.2, 
      y: 100, 
      opacity: 0, 
      ease: 'power3.out',
      delay: 0.5
    })
    .from('h1 + p', { 
      duration: 1, 
      y: 50, 
      opacity: 0, 
      ease: 'power2.out'
    }, '-=0.6');
  
  // Contact info cards animation
  gsap.from('.text-center.space-y-4', {
    y: 50,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.grid.md\\:grid-cols-3.gap-8',
      start: 'top 70%'
    }
  });
  
  // Form section animation
  gsap.from('.bg-gray-900.rounded-lg', {
    scale: 0.95,
    opacity: 0,
    duration: 1,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.bg-gray-900.rounded-lg',
      start: 'top 80%'
    }
  });
  
  // Map and info animation
  gsap.from('.grid.lg\\:grid-cols-2 > div', {
    x: (index) => index === 0 ? -50 : 50,
    opacity: 0,
    duration: 1,
    stagger: 0.3,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.grid.lg\\:grid-cols-2',
      start: 'top 70%'
    }
  });
  
  // Social media icons animation
  gsap.from('.flex.justify-center.space-x-8 a', {
    scale: 0,
    rotation: 180,
    duration: 0.6,
    stagger: 0.1,
    ease: 'back.out(1.7)',
    scrollTrigger: {
      trigger: '.flex.justify-center.space-x-8',
      start: 'top 80%'
    }
  });
  
  // Scroll-triggered animations for sections
  gsap.utils.toArray('.gsap-element').forEach((element) => {
    gsap.to(element, {
      opacity: 1,
      y: 0,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: element,
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      }
    });
  });
</script>