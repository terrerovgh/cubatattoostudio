---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import BookingForm from '../components/forms/BookingForm.astro';
import GSAPWrapper from '../components/animations/GSAPWrapper.astro';
import Badge from '../components/ui/Badge.astro';
import ParticleSystem from '../components/effects/ParticleSystem.astro';
---

<Layout title="Reservar Cita | Cuba Tattoo Studio" description="Agenda tu cita en Cuba Tattoo Studio. Formulario de reservas, información de contacto y ubicación en Albuquerque, NM.">
  <Header />
  
  <main class="bg-black text-white min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 to-black z-10"></div>
      <img 
        src="https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=modern%20tattoo%20studio%20reception%20area%2C%20clean%20minimalist%20design%2C%20black%20and%20white%20aesthetic%2C%20comfortable%20seating%2C%20professional%20atmosphere%2C%20appointment%20booking%20area&image_size=landscape_16_9" 
        alt="Área de recepción Cuba Tattoo Studio" 
        class="absolute inset-0 w-full h-full object-cover"
      />
      
      <ParticleSystem 
        variant="floating" 
        density="low" 
        color="white" 
        size="sm" 
        speed="slow" 
        interactive={false}
        class="opacity-20"
      />
      
      <GSAPWrapper animation="scale-in" intensity="strong" easing="back" delay="0.5">
        <div class="relative z-20 text-center max-w-4xl mx-auto px-6">
          <h1 class="font-heading text-6xl md:text-8xl lg:text-9xl uppercase tracking-wider mb-6">
            Reserva
            <span class="block">Tu Cita</span>
          </h1>
          <p class="font-body text-xl md:text-2xl text-gray-400 max-w-2xl mx-auto leading-relaxed">
            El primer paso hacia tu nueva obra de arte. Agenda tu consulta gratuita hoy
          </p>
        </div>
      </GSAPWrapper>
    </section>

    <!-- Contact Info Section -->
    <section class="py-20 px-6 bg-gray-900">
      <div class="max-w-6xl mx-auto">
        <GSAPWrapper animation="blur-in" intensity="medium" trigger="scroll">
          <div class="text-center mb-16">
            <h2 class="font-heading text-4xl md:text-6xl uppercase tracking-wide mb-8">
              Información de Contacto
            </h2>
            <p class="font-body text-xl text-gray-400 max-w-3xl mx-auto leading-relaxed">
              Estamos aquí para ayudarte a crear la obra de arte perfecta. 
              Contáctanos por cualquier medio o visítanos en nuestro estudio.
            </p>
          </div>
          
          <div class="grid md:grid-cols-3 gap-8 mb-16">
            <div class="text-center space-y-4">
              <div class="w-16 h-16 mx-auto border-2 border-white rounded-full flex items-center justify-center">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="font-heading text-xl uppercase tracking-wide">Ubicación</h3>
              <div class="font-body text-gray-400 space-y-1">
                <p>123 Central Avenue NW</p>
                <p>Albuquerque, NM 87102</p>
                <p>Estados Unidos</p>
              </div>
            </div>
            
            <div class="text-center space-y-4">
              <div class="w-16 h-16 mx-auto border-2 border-white rounded-full flex items-center justify-center">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <h3 class="font-heading text-xl uppercase tracking-wide">Teléfono</h3>
              <div class="font-body text-gray-400 space-y-1">
                <p>(505) 555-CUBA</p>
                <p>(505) 555-2822</p>
                <p class="text-sm">Lun-Sáb: 10:00 AM - 8:00 PM</p>
              </div>
            </div>
            
            <div class="text-center space-y-4">
              <div class="w-16 h-16 mx-auto border-2 border-white rounded-full flex items-center justify-center">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="font-heading text-xl uppercase tracking-wide">Email</h3>
              <div class="font-body text-gray-400 space-y-1">
                <p>info@cubatattoostudio.com</p>
                <p>reservas@cubatattoostudio.com</p>
                <p class="text-sm">Respuesta en 24 horas</p>
              </div>
            </div>
          </div>
        </GSAPWrapper>
      </div>
    </section>

    <!-- Booking Form Section -->
    <section class="py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <GSAPWrapper animation="magnetic" intensity="medium" easing="elastic" trigger="scroll">
          <div class="text-center mb-12">
            <h2 class="font-heading text-4xl md:text-6xl uppercase tracking-wide mb-8">
              Formulario de Reserva
            </h2>
            <p class="font-body text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed">
              Completa el formulario y nos pondremos en contacto contigo para confirmar 
              tu cita y discutir los detalles de tu tatuaje.
            </p>
          </div>
          
          <div class="bg-gray-900 rounded-lg p-8 md:p-12">
            <BookingForm />
          </div>
        </GSAPWrapper>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-20 px-6 bg-gray-900">
      <div class="max-w-6xl mx-auto">
        <GSAPWrapper animation="rotate-in" intensity="subtle" easing="power3" trigger="scroll">
          <div class="text-center mb-12">
            <h2 class="font-heading text-4xl md:text-6xl uppercase tracking-wide mb-8">
              Encuéntranos
            </h2>
            <p class="font-body text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed">
              Ubicados en el corazón de Albuquerque, con fácil acceso y estacionamiento disponible
            </p>
          </div>
          
          <div class="grid lg:grid-cols-2 gap-12 items-start">
            <!-- Map Placeholder -->
            <div class="relative h-96 bg-gray-800 rounded-lg overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center space-y-4">
                  <svg class="w-16 h-16 mx-auto text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div class="font-body text-gray-400">
                    <p class="font-semibold">Cuba Tattoo Studio</p>
                    <p class="text-sm">123 Central Avenue NW</p>
                    <p class="text-sm">Albuquerque, NM 87102</p>
                  </div>
                </div>
              </div>
              <!-- In a real implementation, you would embed Google Maps or similar -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            </div>
            
            <!-- Directions & Info -->
            <div class="space-y-8">
              <div>
                <h3 class="font-heading text-2xl uppercase tracking-wide mb-4">Horarios de Atención</h3>
                <div class="font-body text-gray-400 space-y-2">
                  <div class="flex justify-between">
                    <span>Lunes - Viernes:</span>
                    <span>10:00 AM - 8:00 PM</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Sábado:</span>
                    <span>10:00 AM - 6:00 PM</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Domingo:</span>
                    <span>Cerrado</span>
                  </div>
                </div>
              </div>
              
              <div>
                <h3 class="font-heading text-2xl uppercase tracking-wide mb-4">Información Adicional</h3>
                <div class="font-body text-gray-400 space-y-3 text-sm leading-relaxed">
                  <div class="flex items-center gap-2">
                    <Badge variant="glow" size="sm" class="text-xs">✓</Badge>
                    <span>Estacionamiento gratuito disponible</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <Badge variant="glow" size="sm" class="text-xs">✓</Badge>
                    <span>Acceso para personas con discapacidad</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <Badge variant="glow" size="sm" class="text-xs">✓</Badge>
                    <span>Consultas gratuitas sin compromiso</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <Badge variant="glow" size="sm" class="text-xs">✓</Badge>
                    <span>Ambiente esterilizado y profesional</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <Badge variant="glow" size="sm" class="text-xs">✓</Badge>
                    <span>Certificaciones de salud actualizadas</span>
                  </div>
                </div>
              </div>
              
              <div>
                <h3 class="font-heading text-2xl uppercase tracking-wide mb-4">Política de Citas</h3>
                <div class="font-body text-gray-400 space-y-3 text-sm leading-relaxed">
                  <p>• Depósito de $100 requerido para reservar</p>
                  <p>• Cancelaciones con 48h de anticipación</p>
                  <p>• Traer identificación válida el día de la cita</p>
                  <p>• Mayores de 18 años (menores con tutor legal)</p>
                  <p>• No consumir alcohol 24h antes de la sesión</p>
                </div>
              </div>
            </div>
          </div>
        </GSAPWrapper>
      </div>
    </section>

    <!-- Social Media & Final CTA -->
    <section class="py-20 px-6">
      <div class="max-w-4xl mx-auto text-center">
        <GSAPWrapper animation="fade-in" trigger="scroll">
          <h2 class="font-heading text-4xl md:text-6xl uppercase tracking-wide mb-8">
            Síguenos
          </h2>
          <p class="font-body text-xl text-gray-400 mb-12 max-w-2xl mx-auto leading-relaxed">
            Mantente al día con nuestros últimos trabajos y promociones especiales
          </p>
          
          <div class="flex justify-center space-x-8 mb-12">
            <a href="https://instagram.com/cubatattoostudio" 
               class="w-16 h-16 border-2 border-white rounded-full flex items-center justify-center hover:bg-white hover:text-black transition-all duration-300"
               target="_blank" rel="noopener noreferrer">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a href="https://facebook.com/cubatattoostudio" 
               class="w-16 h-16 border-2 border-white rounded-full flex items-center justify-center hover:bg-white hover:text-black transition-all duration-300"
               target="_blank" rel="noopener noreferrer">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="https://tiktok.com/@cubatattoostudio" 
               class="w-16 h-16 border-2 border-white rounded-full flex items-center justify-center hover:bg-white hover:text-black transition-all duration-300"
               target="_blank" rel="noopener noreferrer">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-.88-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
              </svg>
            </a>
          </div>
          
          <div class="border-t border-gray-700 pt-8">
            <p class="font-body text-gray-500 text-sm">
              ¿Tienes preguntas? Llámanos al (505) 555-CUBA o envíanos un email a info@cubatattoostudio.com
            </p>
          </div>
        </GSAPWrapper>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .gsap-element {
    opacity: 0;
    transform: translateY(30px);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Hero animation
  gsap.timeline()
    .from('h1', { 
      duration: 1.2, 
      y: 100, 
      opacity: 0, 
      ease: 'power3.out',
      delay: 0.5
    })
    .from('h1 + p', { 
      duration: 1, 
      y: 50, 
      opacity: 0, 
      ease: 'power2.out'
    }, '-=0.6');
  
  // Contact info cards animation
  gsap.from('.text-center.space-y-4', {
    y: 50,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.grid.md\\:grid-cols-3.gap-8',
      start: 'top 70%'
    }
  });
  
  // Form section animation
  gsap.from('.bg-gray-900.rounded-lg', {
    scale: 0.95,
    opacity: 0,
    duration: 1,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.bg-gray-900.rounded-lg',
      start: 'top 80%'
    }
  });
  
  // Map and info animation
  gsap.from('.grid.lg\\:grid-cols-2 > div', {
    x: (index) => index === 0 ? -50 : 50,
    opacity: 0,
    duration: 1,
    stagger: 0.3,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.grid.lg\\:grid-cols-2',
      start: 'top 70%'
    }
  });
  
  // Social media icons animation
  gsap.from('.flex.justify-center.space-x-8 a', {
    scale: 0,
    rotation: 180,
    duration: 0.6,
    stagger: 0.1,
    ease: 'back.out(1.7)',
    scrollTrigger: {
      trigger: '.flex.justify-center.space-x-8',
      start: 'top 80%'
    }
  });
  
  // Scroll-triggered animations for sections
  gsap.utils.toArray('.gsap-element').forEach((element) => {
    gsap.to(element, {
      opacity: 1,
      y: 0,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: element,
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      }
    });
  });
</script>