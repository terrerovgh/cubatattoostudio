---
export const prerender = false;

import BaseLayout from "../../layouts/BaseLayout.astro";
import { ConsentForm } from "../../components/consent/ConsentForm";

const { bookingId } = Astro.params;

if (!bookingId) {
  return Astro.redirect("/");
}
---

<BaseLayout
  title="Consent Form | Cuba Tattoo Studio"
  description="Complete your digital consent and waiver form before your tattoo appointment at Cuba Tattoo Studio."
  mode="artist"
>
  <section class="min-h-screen py-12 px-4 md:px-8">
    <div class="max-w-2xl mx-auto mb-8">
      <a
        href="/"
        class="inline-flex items-center gap-2 text-white/50 hover:text-white text-sm transition-colors"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
        </svg>
        Back to Home
      </a>
    </div>

    <ConsentForm bookingId={bookingId} client:only="react" />

    <div class="max-w-2xl mx-auto mt-12 pt-6 border-t border-white/10 text-center">
      <p class="text-white/30 text-xs">
        Cuba Tattoo Studio — 1311 San Mateo Blvd NE, Albuquerque, NM 87109 —
        (505) 492-9806
      </p>
    </div>
  </section>
</BaseLayout>
