---
export const prerender = false;
import "../../styles/global.css";
import { ArtistDashboard } from "../../components/artist/ArtistDashboard";

// Session is already verified by middleware â€” redirects to /artist/login if not artist
const session = Astro.locals.session!;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <title>Artist Dashboard | Cuba Tattoo Studio</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="theme-color" content="#0a0a0c" />
    <meta name="color-scheme" content="dark" />
  </head>
  <body
    class="bg-[var(--color-surface-primary)] text-white font-sans overflow-x-hidden"
  >
    <ArtistDashboard
      client:only="react"
      session={{
        user_id: session.user_id,
        email: session.email,
        role: session.role,
        artist_id: session.artist_id,
        display_name: session.display_name,
      }}
    />
  </body>
</html>
