---
import Layout from "@/layouts/Layout.astro"
import Header from "@/components/layout/Header.astro"
import Footer from "@/components/layout/Footer.astro"
import Button from "@/components/ui/Button.astro"
import Card from "@/components/ui/Card.astro"
import FadeInSection from "@/components/animations/FadeInSection.astro"
import SlideInImage from "@/components/animations/SlideInImage.astro"
import StaggerText from "@/components/animations/StaggerText.astro"
import ParallaxContainer from "@/components/animations/ParallaxContainer.astro"
import artistsData from "@/data/artists.json"

const { artists } = artistsData;
const artist = artists.find(a => a.slug === 'karli');

if (!artist) {
  return Astro.redirect('/artistas');
}

// SEO configuration and structured data
const seoData = {
  title: `${artist.name} - Tattoo Artist Specialist in ${artist.specialties.join(', ')} | Cuba Tattoo Studio`,
  description: `Meet ${artist.name}, professional tattoo artist at Cuba Tattoo Studio Albuquerque. Specialist in ${artist.specialties.join(', ')}. ${artist.experience} Book your appointment today.`,
  keywords: `${artist.name} tattoo artist, ${artist.specialties.join(', ')} tattoos, tattoo artist Albuquerque, Cuba Tattoo Studio ${artist.name}, professional tattoo artist, ${artist.specialties.map(s => s.toLowerCase()).join(' tattoos, ')} tattoos`,
  image: `https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=${encodeURIComponent(`professional tattoo artist ${artist.name} portrait, ${artist.specialties.join(' ')} specialist, Cuba Tattoo Studio Albuquerque, professional headshot`)}&image_size=portrait_4_3`,
  structuredDataType: 'Person'
};
---

<Layout {...seoData}>
  <Header />
  
  <main class="pt-20 bg-black min-h-screen">
    <!-- Hero Section Cinematográfico -->
    <ParallaxContainer speed={0.2} intensity="high" class="py-24 bg-gradient-to-b from-black via-gray-900 to-black relative overflow-hidden">
      <section class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <!-- Artist Image -->
          <SlideInImage 
            direction="left" 
            delay={0.3} 
            intensity="high" 
            parallax={true}
            class="aspect-[4/5] overflow-hidden relative"
          >
            <img 
              src={`https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20professional%20tattoo%20artist%20${artist.name.toLowerCase()}%20portrait%20black%20and%20white%20dramatic%20studio%20lighting%20confident%20creative%20pose%20moody&image_size=portrait_4_3`}
              alt={`${artist.name} - Tattoo artist specialized in ${artist.specialties.join(', ')}`}
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
          </SlideInImage>
          
          <!-- Artist Information -->
          <FadeInSection delay={0.5} intensity="high" class="space-y-8">
            <div class="space-y-6">
              <div>
                <StaggerText 
                  text={artist.name} 
                  element="h1" 
                  class="text-6xl md:text-7xl font-bebas text-white mb-4 tracking-wider"
                  delay={0.6}
                  staggerDelay={0.1}
                />
                <div class="w-24 h-1 bg-white mb-6"></div>
              </div>
              
              <!-- Especialidades -->
              <div>
                <h2 class="text-lg font-bebas text-white mb-3 tracking-widest">
                  SPECIALTIES
                </h2>
                <div class="flex flex-wrap gap-3">
                  {artist.specialties.map((specialty) => (
                    <span class="px-4 py-2 bg-gray-800 text-white text-sm font-inter border border-gray-700 hover:bg-gray-700 transition-colors duration-300">
                      {specialty}
                    </span>
                  ))}
                </div>
              </div>
              
              <!-- Experiencia -->
              <div>
                <h2 class="text-lg font-bebas text-white mb-3 tracking-widest">
                  EXPERIENCE
                </h2>
                <p class="text-gray-300 font-inter leading-relaxed text-xl">
                  {artist.experience}
                </p>
              </div>
              
              <!-- Contacto -->
              <div>
                <h2 class="text-lg font-bebas text-white mb-3 tracking-widest">
                  CONTACT
                </h2>
                <div class="space-y-2">
                  <a 
                    href={`https://instagram.com/${artist.contact.instagram.replace('@', '')}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block text-white hover:text-gray-400 transition-colors duration-300 font-inter"
                  >
                    {artist.contact.instagram}
                  </a>
                  <a 
                    href={`mailto:${artist.contact.email}`}
                    class="block text-white hover:text-gray-400 transition-colors duration-300 font-inter"
                  >
                    {artist.contact.email}
                  </a>
                </div>
              </div>
              
              <!-- CTA -->
              <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <Button 
                  href={`/reservas?artist=${artist.slug}`} 
                  variant="primary" 
                  size="lg"
                >
                  Book with {artist.name}
                </Button>
                <Button 
                  href="/portfolio" 
                  variant="secondary" 
                  size="lg"
                >
                  View Complete Portfolio
                </Button>
              </div>
            </div>
          </FadeInSection>
        </div>
      </div>
    </section>

    <!-- Biografía Cinematográfica -->
    <section class="py-24 bg-gradient-to-b from-black via-gray-900 to-black relative">
      <div class="absolute inset-0 bg-gradient-to-r from-black/50 to-transparent"></div>
      <div class="max-w-6xl mx-auto px-6 relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="text-center space-y-8">
          <StaggerText 
            text={`ABOUT ${artist.name.toUpperCase()}`}
            element="h2" 
            class="text-5xl md:text-6xl font-bebas text-white mb-12 tracking-wider"
            delay={0.3}
            staggerDelay={0.05}
          />
          <div class="max-w-4xl mx-auto">
            <p class="text-xl text-gray-300 font-inter leading-relaxed">
              {artist.bio}
            </p>
          </div>
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto mt-12"></div>
        </FadeInSection>
      </div>
    </section>

    <!-- Portfolio Cinematográfico -->
    <ParallaxContainer speed={0.3} intensity="medium" class="py-24 bg-black relative overflow-hidden">
      <section id="portfolio" class="max-w-7xl mx-auto px-6">
        <FadeInSection delay={0.2} intensity="high" class="text-center mb-16 space-y-6">
          <StaggerText 
            text={`${artist.name.toUpperCase()} PORTFOLIO`}
            element="h2" 
            class="text-5xl md:text-6xl font-bebas text-white tracking-wider"
            delay={0.3}
            staggerDelay={0.05}
          />
          <p class="text-xl text-gray-400 font-inter max-w-2xl mx-auto">
            A selection of the best works created by {artist.name}, showcasing mastery in {artist.specialties.join(', ').toLowerCase()}.
          </p>
          <div class="w-24 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
        </FadeInSection>
        
        <!-- Grid de Portfolio Cinematográfico -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {artist.portfolio.map((work, index) => (
            <SlideInImage 
              direction={index % 2 === 0 ? "left" : "right"}
              delay={0.4 + (index * 0.1)}
              intensity="medium"
              class="group overflow-hidden bg-gray-900 border border-gray-800 hover:border-gray-600 transition-all duration-500"
            >
              <div class="aspect-square overflow-hidden relative">
                <img 
                  src={`https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20${work.style.toLowerCase()}%20tattoo%20${work.description.toLowerCase()}%20${work.bodyPart.toLowerCase()}%20black%20and%20white%20detailed%20professional%20moody%20lighting&image_size=square_hd`}
                  alt={`${work.title} - ${work.style} by ${artist.name}`}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-bebas text-white uppercase tracking-wider mb-3">
                  {work.title}
                </h3>
                
                <div class="space-y-2 mb-4">
                  <div class="flex justify-between items-center">
                    <span class="text-sm font-inter text-gray-400 uppercase tracking-wider">
                      Style
                    </span>
                    <span class="text-sm font-inter text-white">
                      {work.style}
                    </span>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <span class="text-sm font-inter text-gray-400 uppercase tracking-wider">
                      Size
                    </span>
                    <span class="text-sm font-inter text-white">
                      {work.size}
                    </span>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <span class="text-sm font-inter text-gray-400 uppercase tracking-wider">
                      Location
                    </span>
                    <span class="text-sm font-inter text-white">
                      {work.bodyPart}
                    </span>
                  </div>
                </div>
                
                <p class="text-gray-400 font-inter text-sm leading-relaxed">
                  {work.description}
                </p>
              </div>
            </SlideInImage>
          ))}
        </div>
      </section>
    </ParallaxContainer>

    <!-- Enfoque Artístico Cinematográfico -->
    <section class="py-24 bg-gradient-to-b from-black via-gray-900 to-black relative">
      <div class="max-w-6xl mx-auto px-6">
        <FadeInSection delay={0.2} intensity="high" class="text-center mb-16 space-y-6">
          <StaggerText 
            text="ARTISTIC APPROACH"
            element="h2" 
            class="text-5xl md:text-6xl font-bebas text-white tracking-wider"
            delay={0.3}
            staggerDelay={0.05}
          />
          <div class="w-24 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
        </FadeInSection>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          <FadeInSection delay={0.4} intensity="medium" class="text-center space-y-6 group">
            <div class="w-20 h-20 bg-white mx-auto mb-8 flex items-center justify-center group-hover:bg-gray-200 transition-colors duration-300">
              <svg class="w-10 h-10 text-black" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-2xl font-bebas text-white uppercase tracking-wider">
              CREATIVITY
            </h3>
            <p class="text-gray-400 font-inter leading-relaxed">
              Every design is an opportunity to explore new forms and concepts, fusing tradition with innovation.
            </p>
          </FadeInSection>
          
          <FadeInSection delay={0.6} intensity="medium" class="text-center space-y-6 group">
            <div class="w-20 h-20 bg-white mx-auto mb-8 flex items-center justify-center group-hover:bg-gray-200 transition-colors duration-300">
              <svg class="w-10 h-10 text-black" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2v1a1 1 0 102 0V3h4v1a1 1 0 102 0V3a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm2.5 7a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm2.45-1.5a1.5 1.5 0 103 0 1.5 1.5 0 00-3 0z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-2xl font-bebas text-white uppercase tracking-wider">
              VERSATILITY
            </h3>
            <p class="text-gray-400 font-inter leading-relaxed">
              My experience spans multiple styles, from neo-traditional to the most complex geometric designs.
            </p>
          </FadeInSection>
          
          <FadeInSection delay={0.8} intensity="medium" class="text-center space-y-6 group">
            <div class="w-20 h-20 bg-white mx-auto mb-8 flex items-center justify-center group-hover:bg-gray-200 transition-colors duration-300">
              <svg class="w-10 h-10 text-black" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-2xl font-bebas text-white uppercase tracking-wider">
              QUALITY
            </h3>
            <p class="text-gray-400 font-inter leading-relaxed">
              Every line, every shadow and every detail are executed with maximum precision and artistic care.
            </p>
          </FadeInSection>
        </div>
      </div>
    </section>

    <!-- Testimonios Cinematográficos -->
    <section class="py-24 bg-gradient-to-b from-black via-gray-900 to-black relative">
      <div class="max-w-6xl mx-auto px-6">
        <FadeInSection delay={0.2} intensity="high" class="text-center mb-16 space-y-6">
          <StaggerText 
            text="WHAT MY CLIENTS SAY"
            element="h2" 
            class="text-5xl md:text-6xl font-bebas text-white tracking-wider"
            delay={0.3}
            staggerDelay={0.05}
          />
          <div class="w-24 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
        </FadeInSection>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <FadeInSection delay={0.4} intensity="medium">
            <Card class="p-8 bg-gray-900 border border-gray-800 hover:border-gray-600 transition-all duration-500">
              <div class="mb-6">
                <div class="flex text-white mb-4">
                  {[...Array(5)].map(() => (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <p class="text-gray-400 font-inter leading-relaxed italic text-lg">
                  "Karli transformed my vague idea into an incredible work of art. His attention to detail and creativity exceeded all my expectations."
                </p>
              </div>
              <div class="text-white font-inter text-sm uppercase tracking-wider">
                — SARAH M.
              </div>
            </Card>
          </FadeInSection>
          
          <FadeInSection delay={0.6} intensity="medium">
            <Card class="p-8 bg-gray-900 border border-gray-800 hover:border-gray-600 transition-all duration-500">
              <div class="mb-6">
                <div class="flex text-white mb-4">
                  {[...Array(5)].map(() => (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <p class="text-gray-400 font-inter leading-relaxed italic text-lg">
                  "The geometric design that Karli made for me is perfect. Every line is exactly where it should be. A true professional."
                </p>
              </div>
              <div class="text-white font-inter text-sm uppercase tracking-wider">
                — MIKE R.
              </div>
            </Card>
          </FadeInSection>
        </div>
      </div>
    </section>

    <!-- CTA Final Cinematográfico -->
    <ParallaxContainer speed={0.4} intensity="high" class="py-32 bg-gradient-to-b from-black via-gray-900 to-black relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-black/80 to-transparent"></div>
      <section class="max-w-4xl mx-auto px-6 text-center relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="space-y-8">
          <StaggerText 
            text="READY FOR SOMETHING UNIQUE?"
            element="h2" 
            class="text-5xl md:text-6xl font-bebas text-white tracking-wider"
            delay={0.3}
            staggerDelay={0.05}
          />
          <p class="text-xl text-gray-300 font-inter leading-relaxed max-w-2xl mx-auto">
            Specialized in custom designs that combine impeccable technique with limitless creativity. Let's talk about your next tattoo.
          </p>
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto my-8"></div>
          <div class="flex flex-col sm:flex-row gap-6 justify-center pt-4">
            <Button href={`/reservas?artist=${artist.slug}`} variant="primary" size="lg">
              Book with {artist.name}
            </Button>
            <Button href="/artistas" variant="secondary" size="lg">
              View Other Artists
            </Button>
          </div>
        </FadeInSection>
      </section>
    </ParallaxContainer>
  </main>
  
  <Footer />
</Layout>