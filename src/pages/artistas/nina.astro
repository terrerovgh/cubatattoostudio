---
import Layout from "@/layouts/Layout.astro"
import Header from "@/components/layout/Header.astro"
import Footer from "@/components/layout/Footer.astro"
import Button from "@/components/ui/Button.astro"
import Card from "@/components/ui/Card.astro"
import FadeInSection from "@/components/animations/FadeInSection.astro"
import SlideInImage from "@/components/animations/SlideInImage.astro"
import StaggerText from "@/components/animations/StaggerText.astro"
import ParallaxContainer from "@/components/animations/ParallaxContainer.astro"
import artistsData from "@/data/artists.json"

const { artists } = artistsData;
const artist = artists.find(a => a.slug === 'nina');

if (!artist) {
  return Astro.redirect('/artistas');
}
---

<Layout 
  title={`${artist.name} - Artista de Tatuajes | Cuba Tattoo Studio`}
  description={`Conoce a ${artist.name}, especialista en ${artist.specialties.join(', ')}. ${artist.bio.substring(0, 150)}...`}
>
  <Header />
  
  <main class="pt-20 bg-black min-h-screen">
    <!-- Hero Section Cinematográfico -->
    <ParallaxContainer speed={0.3} intensity="high" pin={true} class="min-h-screen relative">
      <section class="min-h-screen flex items-center bg-gradient-to-b from-black via-gray-900 to-black">
        <div class="max-w-7xl mx-auto px-6 w-full">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <!-- Imagen Cinematográfica del Artista -->
            <div class="relative">
              <SlideInImage 
                src={`https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20professional%20female%20tattoo%20artist%20${artist.name.toLowerCase()}%20portrait%20black%20and%20white%20dramatic%20studio%20lighting%20confident%20artistic%20pose%20film%20noir%20style&image_size=portrait_4_3`}
                alt={`${artist.name} - Artista de tatuajes especializada en ${artist.specialties.join(', ')}`}
                direction="left"
                delay={0.3}
                intensity="high"
                parallax={true}
                class="aspect-[4/5] w-full object-cover rounded-lg shadow-2xl"
              />
              
              <!-- Elementos decorativos cinematográficos -->
              <div class="absolute -top-6 -left-6 w-12 h-12 border-l-2 border-t-2 border-white opacity-20"></div>
              <div class="absolute -bottom-6 -right-6 w-12 h-12 border-r-2 border-b-2 border-white opacity-20"></div>
              <div class="absolute inset-0 bg-gradient-to-tr from-black/20 to-transparent rounded-lg"></div>
            </div>
          
            <!-- Información Cinematográfica del Artista -->
            <div class="space-y-8">
              <div>
                <StaggerText 
                  tag="h1" 
                  text={artist.name.toUpperCase()}
                  splitBy="chars"
                  delay={0.6}
                  stagger={0.05}
                  intensity="high"
                  class="text-6xl md:text-8xl font-heading text-white uppercase tracking-wider mb-6"
                />
                <FadeInSection delay={1.2} intensity="subtle">
                  <div class="w-32 h-1 bg-gradient-to-r from-white to-gray-500 mb-8"></div>
                </FadeInSection>
              </div>
              
              <!-- Especialidades Cinematográficas -->
              <FadeInSection delay={1.4} intensity="medium">
                <div>
                  <h2 class="text-sm font-body text-gray-400 uppercase tracking-wider mb-4">
                    Especialidades
                  </h2>
                  <div class="flex flex-wrap gap-3">
                    {artist.specialties.map((specialty, index) => (
                      <FadeInSection delay={1.6 + (index * 0.1)} intensity="subtle">
                        <span class="px-6 py-3 bg-gradient-to-r from-gray-800 to-gray-700 text-white text-sm font-body uppercase tracking-wider border border-gray-600 hover:border-white transition-colors duration-300">
                          {specialty}
                        </span>
                      </FadeInSection>
                    ))}
                  </div>
                </div>
              </FadeInSection>
              
              <!-- Experiencia Cinematográfica -->
              <FadeInSection delay={2.0} intensity="medium">
                <div>
                  <h2 class="text-sm font-body text-gray-400 uppercase tracking-wider mb-4">
                    Experiencia
                  </h2>
                  <p class="text-white font-body text-xl leading-relaxed">
                    {artist.experience}
                  </p>
                </div>
              </FadeInSection>
              
              <!-- Contacto Cinematográfico -->
              <FadeInSection delay={2.3} intensity="medium">
                <div>
                  <h2 class="text-sm font-body text-gray-400 uppercase tracking-wider mb-4">
                    Contacto
                  </h2>
                  <div class="space-y-3">
                    <a 
                      href={`https://instagram.com/${artist.contact.instagram.replace('@', '')}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block text-white hover:text-gray-300 transition-all duration-500 font-body text-lg group"
                    >
                      <span class="border-b border-transparent group-hover:border-white transition-all duration-300">
                        {artist.contact.instagram}
                      </span>
                    </a>
                    <a 
                      href={`mailto:${artist.contact.email}`}
                      class="block text-white hover:text-gray-300 transition-all duration-500 font-body text-lg group"
                    >
                      <span class="border-b border-transparent group-hover:border-white transition-all duration-300">
                        {artist.contact.email}
                      </span>
                    </a>
                  </div>
                </div>
              </FadeInSection>
              
              <!-- CTA Cinematográfico -->
              <FadeInSection delay={2.6} intensity="high">
                <div class="flex flex-col sm:flex-row gap-6 pt-6">
                  <Button 
                    href={`/reservas?artist=${artist.slug}`} 
                    variant="primary" 
                    size="lg"
                    class="transform hover:scale-105 transition-transform duration-300"
                  >
                    Reservar con {artist.name}
                  </Button>
                  <Button 
                    href="/portfolio" 
                    variant="outline" 
                    size="lg"
                    class="transform hover:scale-105 transition-transform duration-300"
                  >
                    Ver Portfolio Completo
                  </Button>
                </div>
              </FadeInSection>
            </div>
        </div>
      </section>
    </ParallaxContainer>

    <!-- Biografía Cinematográfica -->
    <FadeInSection delay={0.2} intensity="high" class="py-24 bg-gradient-to-b from-black via-gray-900 to-black">
      <section class="max-w-5xl mx-auto px-6">
        <div class="text-center">
          <StaggerText 
            tag="h2" 
            text={`SOBRE ${artist.name.toUpperCase()}`}
            splitBy="words"
            delay={0.4}
            stagger={0.15}
            intensity="high"
            class="text-5xl md:text-6xl font-heading text-white uppercase tracking-wider mb-12"
          />
          
          <FadeInSection delay={1.0} intensity="medium">
            <div class="relative">
              <p class="text-gray-300 font-body text-xl leading-relaxed max-w-3xl mx-auto">
                {artist.bio}
              </p>
              
              <!-- Elementos decorativos -->
              <div class="absolute -top-4 -left-4 w-8 h-8 border-l border-t border-white opacity-20"></div>
              <div class="absolute -bottom-4 -right-4 w-8 h-8 border-r border-b border-white opacity-20"></div>
            </div>
          </FadeInSection>
        </div>
      </section>
    </FadeInSection>

    <!-- Portfolio Cinematográfico del Artista -->
    <ParallaxContainer speed={0.2} intensity="medium" class="py-24 bg-gradient-to-b from-black via-gray-800 to-black">
      <section class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-20">
          <StaggerText 
            tag="h2" 
            text={`PORTFOLIO DE ${artist.name.toUpperCase()}`}
            splitBy="words"
            delay={0.3}
            stagger={0.12}
            intensity="high"
            class="text-5xl md:text-6xl font-heading text-white uppercase tracking-wider mb-8"
          />
          
          <FadeInSection delay={1.0} intensity="medium">
            <p class="text-gray-300 font-body text-xl leading-relaxed max-w-3xl mx-auto">
              Una selección de los mejores trabajos realizados por {artist.name}, mostrando su maestría en {artist.specialties.join(', ').toLowerCase()}.
            </p>
          </FadeInSection>
        </div>
        
        <!-- Grid Cinematográfico de Portfolio -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {artist.portfolio.map((work, index) => (
            <FadeInSection delay={1.3 + (index * 0.15)} intensity="medium">
              <Card class="group overflow-hidden bg-gradient-to-br from-gray-900 to-gray-800 border border-gray-700 hover:border-white transition-all duration-500">
                <div class="aspect-square bg-gray-800 overflow-hidden relative">
                  <SlideInImage 
                    src={`https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20${work.style.toLowerCase()}%20tattoo%20${work.description.toLowerCase()}%20${work.bodyPart.toLowerCase()}%20black%20and%20white%20detailed%20professional%20dramatic%20lighting&image_size=square_hd`}
                    alt={`${work.title} - ${work.style} por ${artist.name}`}
                    direction="up"
                    delay={0}
                    intensity="subtle"
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  />
                  
                  <!-- Overlay cinematográfico -->
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                </div>
                
                <div class="p-6">
                  <h3 class="text-xl font-heading text-white uppercase tracking-wider mb-4">
                    {work.title}
                  </h3>
                  
                  <div class="space-y-3 mb-4">
                    <div class="flex justify-between items-center">
                      <span class="text-sm font-body text-gray-400 uppercase tracking-wider">
                        Estilo
                      </span>
                      <span class="text-sm font-body text-white">
                        {work.style}
                      </span>
                    </div>
                    
                    <div class="flex justify-between items-center">
                      <span class="text-sm font-body text-gray-400 uppercase tracking-wider">
                        Tamaño
                      </span>
                      <span class="text-sm font-body text-white">
                        {work.size}
                      </span>
                    </div>
                    
                    <div class="flex justify-between items-center">
                      <span class="text-sm font-body text-gray-400 uppercase tracking-wider">
                        Ubicación
                      </span>
                      <span class="text-sm font-body text-white">
                        {work.bodyPart}
                      </span>
                    </div>
                  </div>
                  
                  <p class="text-gray-300 font-body text-sm leading-relaxed">
                    {work.description}
                  </p>
                </div>
              </Card>
            </FadeInSection>
          ))}
        </div>
      </section>
    </ParallaxContainer>

    <!-- Filosofía Artística Cinematográfica -->
    <FadeInSection delay={0.2} intensity="high" class="py-24 bg-gradient-to-b from-black via-gray-900 to-black">
      <section class="max-w-6xl mx-auto px-6">
        <div class="text-center">
          <StaggerText 
            tag="h2" 
            text="MI FILOSOFÍA"
            splitBy="chars"
            delay={0.4}
            stagger={0.08}
            intensity="high"
            class="text-5xl md:text-6xl font-heading text-white uppercase tracking-wider mb-16"
          />
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
            <FadeInSection delay={1.0} intensity="medium">
              <div class="text-center group">
                <div class="w-20 h-20 bg-gradient-to-br from-gray-700 to-gray-800 mx-auto mb-6 flex items-center justify-center rounded-lg transform group-hover:scale-110 transition-transform duration-500">
                  <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </div>
                <h3 class="text-2xl font-heading text-white uppercase tracking-wider mb-4">
                  Excelencia
                </h3>
                <p class="text-gray-300 font-body leading-relaxed">
                  Cada tatuaje es una obra de arte única. Me comprometo a entregar solo trabajos de la más alta calidad.
                </p>
              </div>
            </FadeInSection>
            
            <FadeInSection delay={1.3} intensity="medium">
              <div class="text-center group">
                <div class="w-20 h-20 bg-gradient-to-br from-gray-700 to-gray-800 mx-auto mb-6 flex items-center justify-center rounded-lg transform group-hover:scale-110 transition-transform duration-500">
                  <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                  </svg>
                </div>
                <h3 class="text-2xl font-heading text-white uppercase tracking-wider mb-4">
                  Conexión
                </h3>
                <p class="text-gray-300 font-body leading-relaxed">
                  Creo en la importancia de conectar con cada cliente para entender su visión y crear algo verdaderamente personal.
                </p>
              </div>
            </FadeInSection>
            
            <FadeInSection delay={1.6} intensity="medium">
              <div class="text-center group">
                <div class="w-20 h-20 bg-gradient-to-br from-gray-700 to-gray-800 mx-auto mb-6 flex items-center justify-center rounded-lg transform group-hover:scale-110 transition-transform duration-500">
                  <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                  </svg>
                </div>
                <h3 class="text-2xl font-heading text-white uppercase tracking-wider mb-4">
                  Precisión
                </h3>
                <p class="text-gray-300 font-body leading-relaxed">
                  La atención al detalle y la precisión técnica son fundamentales en mi trabajo, especialmente en estilos finos.
                </p>
              </div>
            </FadeInSection>
          </div>
        </div>
      </section>
    </FadeInSection>

    <!-- CTA Final Cinematográfico -->
    <ParallaxContainer speed={0.1} intensity="high" class="py-24 bg-gradient-to-t from-black via-gray-900 to-black relative">
      <section class="max-w-4xl mx-auto px-6 text-center relative z-10">
        <StaggerText 
          tag="h2" 
          text="¿LISTA PARA CREAR ALGO HERMOSO?"
          splitBy="words"
          delay={0.3}
          stagger={0.1}
          intensity="high"
          class="text-5xl md:text-6xl font-heading text-white uppercase tracking-wider mb-8"
        />
        
        <FadeInSection delay={1.2} intensity="medium">
          <p class="text-gray-300 font-body text-xl leading-relaxed mb-10 max-w-2xl mx-auto">
            Me especializo en crear tatuajes delicados y significativos. Hablemos sobre tu próximo proyecto y hagámoslo realidad juntas.
          </p>
        </FadeInSection>
        
        <FadeInSection delay={1.6} intensity="high">
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
            <Button 
              href={`/reservas?artist=${artist.slug}`} 
              variant="primary" 
              size="lg"
              class="transform hover:scale-105 transition-all duration-300 shadow-2xl"
            >
              Reservar con {artist.name}
            </Button>
            <Button 
              href="/artistas" 
              variant="outline" 
              size="lg"
              class="transform hover:scale-105 transition-all duration-300"
            >
              Ver Otros Artistas
            </Button>
          </div>
        </FadeInSection>
        
        <!-- Elementos decorativos cinematográficos -->
        <div class="absolute top-8 left-8 w-16 h-16 border-l-2 border-t-2 border-white opacity-10"></div>
        <div class="absolute bottom-8 right-8 w-16 h-16 border-r-2 border-b-2 border-white opacity-10"></div>
      </section>
    </ParallaxContainer>
  </main>
  
  <Footer />
</Layout>