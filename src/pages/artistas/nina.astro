---
import Layout from "@/layouts/Layout.astro"
import Header from "@/components/layout/Header.astro"
import Footer from "@/components/layout/Footer.astro"
import Button from "@/components/ui/Button.astro"
import Card from "@/components/ui/Card.astro"
import GSAPWrapper from "@/components/animations/GSAPWrapper.astro"
import artistsData from "@/data/artists.json"

const { artists } = artistsData;
const artist = artists.find(a => a.slug === 'nina');

if (!artist) {
  return Astro.redirect('/artistas');
}
---

<Layout 
  title={`${artist.name} - Artista de Tatuajes | Cuba Tattoo Studio`}
  description={`Conoce a ${artist.name}, especialista en ${artist.specialties.join(', ')}. ${artist.bio.substring(0, 150)}...`}
>
  <Header />
  
  <main class="pt-20 bg-cuba-black min-h-screen">
    <!-- Hero Section del Artista -->
    <section class="py-16 bg-gradient-to-b from-cuba-black to-cuba-gray-600">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Imagen del Artista -->
          <GSAPWrapper animation="fade-in" delay={0.2}>
            <div class="aspect-[4/5] bg-cuba-gray-600 overflow-hidden">
              <img 
                src={`https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=professional%20female%20tattoo%20artist%20${artist.name.toLowerCase()}%20portrait%20black%20and%20white%20studio%20lighting%20confident%20artistic%20pose&image_size=portrait_4_3`}
                alt={`${artist.name} - Artista de tatuajes especializada en ${artist.specialties.join(', ')}`}
                class="w-full h-full object-cover"
              />
            </div>
          </GSAPWrapper>
          
          <!-- Información del Artista -->
          <GSAPWrapper animation="slide-up" delay={0.4}>
            <div class="space-y-6">
              <div>
                <h1 class="text-5xl md:text-7xl font-heading text-cuba-white uppercase tracking-wider mb-4">
                  {artist.name}
                </h1>
                <div class="w-24 h-1 bg-cuba-white mb-6"></div>
              </div>
              
              <!-- Especialidades -->
              <div>
                <h2 class="text-sm font-body text-cuba-gray-400 uppercase tracking-wider mb-3">
                  Especialidades
                </h2>
                <div class="flex flex-wrap gap-3">
                  {artist.specialties.map((specialty) => (
                    <span class="px-4 py-2 bg-cuba-gray-600 text-cuba-white text-sm font-body uppercase tracking-wider">
                      {specialty}
                    </span>
                  ))}
                </div>
              </div>
              
              <!-- Experiencia -->
              <div>
                <h2 class="text-sm font-body text-cuba-gray-400 uppercase tracking-wider mb-3">
                  Experiencia
                </h2>
                <p class="text-cuba-white font-body text-xl">
                  {artist.experience}
                </p>
              </div>
              
              <!-- Contacto -->
              <div>
                <h2 class="text-sm font-body text-cuba-gray-400 uppercase tracking-wider mb-3">
                  Contacto
                </h2>
                <div class="space-y-2">
                  <a 
                    href={`https://instagram.com/${artist.contact.instagram.replace('@', '')}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block text-cuba-white hover:text-cuba-gray-400 transition-colors duration-300 font-body"
                  >
                    {artist.contact.instagram}
                  </a>
                  <a 
                    href={`mailto:${artist.contact.email}`}
                    class="block text-cuba-white hover:text-cuba-gray-400 transition-colors duration-300 font-body"
                  >
                    {artist.contact.email}
                  </a>
                </div>
              </div>
              
              <!-- CTA -->
              <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <Button 
                  href={`/reservas?artist=${artist.slug}`} 
                  variant="primary" 
                  size="lg"
                >
                  Reservar con {artist.name}
                </Button>
                <Button 
                  href="/portfolio" 
                  variant="outline" 
                  size="lg"
                >
                  Ver Portfolio Completo
                </Button>
              </div>
            </div>
          </GSAPWrapper>
        </div>
      </div>
    </section>

    <!-- Biografía -->
    <GSAPWrapper animation="fade-in" class="py-20">
      <section class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-heading text-cuba-white uppercase tracking-wider mb-8 text-center">
            Sobre {artist.name}
          </h2>
          <div class="prose prose-invert max-w-none">
            <p class="text-cuba-gray-400 font-body text-lg leading-relaxed text-center">
              {artist.bio}
            </p>
          </div>
        </div>
      </section>
    </GSAPWrapper>

    <!-- Portfolio del Artista -->
    <section class="py-20 bg-gradient-to-b from-cuba-black to-cuba-gray-600">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <GSAPWrapper animation="fade-in">
          <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-heading text-cuba-white uppercase tracking-wider mb-6">
              Portfolio de {artist.name}
            </h2>
            <p class="text-cuba-gray-400 font-body text-lg max-w-2xl mx-auto">
              Una selección de los mejores trabajos realizados por {artist.name}, mostrando su maestría en {artist.specialties.join(', ').toLowerCase()}.
            </p>
          </div>
        </GSAPWrapper>
        
        <!-- Grid de Portfolio -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {artist.portfolio.map((work, index) => (
            <GSAPWrapper animation="stagger" delay={index * 0.2}>
              <Card class="group overflow-hidden">
                <div class="aspect-square bg-cuba-gray-600 overflow-hidden">
                  <img 
                    src={`https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=${work.style.toLowerCase()}%20tattoo%20${work.description.toLowerCase()}%20${work.bodyPart.toLowerCase()}%20black%20and%20white%20detailed%20professional&image_size=square_hd`}
                    alt={`${work.title} - ${work.style} por ${artist.name}`}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                  />
                </div>
                
                <div class="p-6">
                  <h3 class="text-xl font-heading text-cuba-white uppercase tracking-wider mb-2">
                    {work.title}
                  </h3>
                  
                  <div class="space-y-2 mb-4">
                    <div class="flex justify-between items-center">
                      <span class="text-sm font-body text-cuba-gray-400 uppercase tracking-wider">
                        Estilo
                      </span>
                      <span class="text-sm font-body text-cuba-white">
                        {work.style}
                      </span>
                    </div>
                    
                    <div class="flex justify-between items-center">
                      <span class="text-sm font-body text-cuba-gray-400 uppercase tracking-wider">
                        Tamaño
                      </span>
                      <span class="text-sm font-body text-cuba-white">
                        {work.size}
                      </span>
                    </div>
                    
                    <div class="flex justify-between items-center">
                      <span class="text-sm font-body text-cuba-gray-400 uppercase tracking-wider">
                        Ubicación
                      </span>
                      <span class="text-sm font-body text-cuba-white">
                        {work.bodyPart}
                      </span>
                    </div>
                  </div>
                  
                  <p class="text-cuba-gray-400 font-body text-sm leading-relaxed">
                    {work.description}
                  </p>
                </div>
              </Card>
            </GSAPWrapper>
          ))}
        </div>
      </div>
    </section>

    <!-- Filosofía Artística -->
    <GSAPWrapper animation="fade-in" class="py-20">
      <section class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl md:text-5xl font-heading text-cuba-white uppercase tracking-wider mb-12">
            Mi Filosofía
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <GSAPWrapper animation="stagger" delay={0.1}>
              <div class="text-center">
                <div class="w-16 h-16 bg-cuba-gray-600 mx-auto mb-4 flex items-center justify-center">
                  <svg class="w-8 h-8 text-cuba-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </div>
                <h3 class="text-xl font-heading text-cuba-white uppercase tracking-wider mb-3">
                  Excelencia
                </h3>
                <p class="text-cuba-gray-400 font-body text-sm leading-relaxed">
                  Cada tatuaje es una obra de arte única. Me comprometo a entregar solo trabajos de la más alta calidad.
                </p>
              </div>
            </GSAPWrapper>
            
            <GSAPWrapper animation="stagger" delay={0.2}>
              <div class="text-center">
                <div class="w-16 h-16 bg-cuba-gray-600 mx-auto mb-4 flex items-center justify-center">
                  <svg class="w-8 h-8 text-cuba-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                  </svg>
                </div>
                <h3 class="text-xl font-heading text-cuba-white uppercase tracking-wider mb-3">
                  Conexión
                </h3>
                <p class="text-cuba-gray-400 font-body text-sm leading-relaxed">
                  Creo en la importancia de conectar con cada cliente para entender su visión y crear algo verdaderamente personal.
                </p>
              </div>
            </GSAPWrapper>
            
            <GSAPWrapper animation="stagger" delay={0.3}>
              <div class="text-center">
                <div class="w-16 h-16 bg-cuba-gray-600 mx-auto mb-4 flex items-center justify-center">
                  <svg class="w-8 h-8 text-cuba-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                  </svg>
                </div>
                <h3 class="text-xl font-heading text-cuba-white uppercase tracking-wider mb-3">
                  Precisión
                </h3>
                <p class="text-cuba-gray-400 font-body text-sm leading-relaxed">
                  La atención al detalle y la precisión técnica son fundamentales en mi trabajo, especialmente en estilos finos.
                </p>
              </div>
            </GSAPWrapper>
          </div>
        </div>
      </section>
    </GSAPWrapper>

    <!-- CTA Final -->
    <GSAPWrapper animation="fade-in" class="py-20 bg-gradient-to-t from-cuba-black to-cuba-gray-600">
      <section class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-heading text-cuba-white uppercase tracking-wider mb-6">
            ¿Lista para crear algo hermoso?
          </h2>
          <p class="text-cuba-gray-400 font-body text-lg leading-relaxed mb-8">
            Me especializo en crear tatuajes delicados y significativos. Hablemos sobre tu próximo proyecto y hagámoslo realidad juntas.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <Button href={`/reservas?artist=${artist.slug}`} variant="primary" size="lg">
              Reservar con {artist.name}
            </Button>
            <Button href="/artistas" variant="outline" size="lg">
              Ver Otros Artistas
            </Button>
          </div>
        </div>
      </section>
    </GSAPWrapper>
  </main>
  
  <Footer />
</Layout>