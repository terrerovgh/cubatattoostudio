---
export const prerender = false;
import "../../styles/global.css";
import { validateChatToken } from "../../lib/auth";
import { ChatWidget } from "../../components/chat/ChatWidget";

const { token } = Astro.params;
const env = (Astro.locals as any).runtime?.env as Env;

let chatData: { room_id: string; client_id: string } | null = null;
let error: string | null = null;

if (!token) {
  error = "No chat token provided.";
} else if (!env?.DB) {
  error = "Service temporarily unavailable.";
} else {
  try {
    chatData = await validateChatToken(token, env.DB);
    if (!chatData) {
      error = "This chat link is invalid or has expired.";
    }
  } catch {
    error = "An error occurred while validating your chat link.";
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <title>Chat | Cuba Tattoo Studio</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="theme-color" content="#0a0a0c" />
    <meta name="color-scheme" content="dark" />
  </head>
  <body
    class="bg-[var(--color-surface-primary)] text-white font-sans overflow-x-hidden"
  >
    {error ? (
      <div class="min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-sm p-8 rounded-2xl bg-white/[0.03] border border-white/[0.06] text-center space-y-4">
          <div class="w-12 h-12 mx-auto rounded-full bg-red-500/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
            </svg>
          </div>
          <h1 class="text-lg font-semibold text-white">Chat Unavailable</h1>
          <p class="text-sm text-white/50">{error}</p>
          <a
            href="/"
            class="inline-block mt-4 px-5 py-2.5 rounded-xl bg-white/5 text-white/60 text-sm font-medium hover:text-white hover:bg-white/10 transition-colors"
          >
            Back to Home
          </a>
        </div>
      </div>
    ) : (
      <ChatWidget
        client:only="react"
        room_id={chatData!.room_id}
        client_id={chatData!.client_id}
      />
    )}
  </body>
</html>
