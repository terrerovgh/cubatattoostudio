---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Button from '../components/ui/Button.astro';
import FadeInSection from '../components/animations/FadeInSection.astro';
import SlideInImage from '../components/animations/SlideInImage.astro';
import StaggerText from '../components/animations/StaggerText.astro';
import ParallaxContainer from '../components/animations/ParallaxContainer.astro';

// SEO and structured data for studio page
const seoData = {
  title: "About Our Studio - History and Philosophy | Cuba Tattoo Studio",
  description: "Learn about the history, philosophy and process of Cuba Tattoo Studio in Albuquerque, NM. Standards of excellence, safety and personalization in every tattoo since 2015.",
  keywords: ["cuba tattoo studio history", "albuquerque tattoo philosophy", "professional tattoo process", "new mexico tattoo studio", "tattoo safety hygiene", "custom tattoo designs"],
  image: "https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cuba%20tattoo%20studio%20interior%20professional%20clean%20modern%20albuquerque%20new%20mexico&image_size=landscape_16_9",
  structuredDataType: "LocalBusiness"
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  image={seoData.image}
  structuredDataType={seoData.structuredDataType}
>
  <Header />
  
  <main class="bg-black text-white min-h-screen">
    <!-- Hero Section Cinematogr치fico -->
    <ParallaxContainer speed={0.5} intensity="high" class="relative h-screen flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black z-10"></div>
      <SlideInImage 
        direction="zoom-out"
        delay={0.2}
        intensity="high"
        class="absolute inset-0 w-full h-full"
      >
        <img 
          src="https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20professional%20tattoo%20studio%20interior%2C%20clean%20modern%20design%2C%20black%20and%20white%20aesthetic%2C%20tattoo%20chairs%2C%20equipment%2C%20sterile%20environment%2C%20dramatic%20moody%20lighting%2C%20minimalist%20decor%2C%20film%20noir%20style&image_size=landscape_16_9" 
          alt="Cuba Tattoo Studio interior" 
          class="w-full h-full object-cover"
        />
      </SlideInImage>
      
      <FadeInSection delay={0.6} intensity="high" class="relative z-20 text-center max-w-5xl mx-auto px-6">
        <div class="space-y-8">
          <StaggerText 
            text="OUR STUDIO"
            element="h1" 
            class="font-bebas text-7xl md:text-9xl lg:text-[12rem] uppercase tracking-wider leading-none"
            delay={0.8}
            staggerDelay={0.1}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
          <p class="font-inter text-2xl md:text-3xl text-gray-300 max-w-4xl mx-auto leading-relaxed">
            More than a tattoo studio, we are artists dedicated to creating exceptional body art
          </p>
        </div>
      </FadeInSection>
      
      <!-- Elementos decorativos -->
      <div class="absolute top-20 left-20 w-32 h-32 bg-white/5 rounded-full blur-3xl z-5"></div>
      <div class="absolute bottom-20 right-20 w-48 h-48 bg-white/3 rounded-full blur-3xl z-5"></div>
    </ParallaxContainer>

    <!-- About Section Cinematogr치fico -->
    <section class="py-32 px-6 bg-gradient-to-b from-black to-gray-900 relative">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-20 items-center">
          <FadeInSection delay={0.2} intensity="high">
            <div class="space-y-8">
              <StaggerText 
                text="OUR HISTORY"
                element="h2" 
                class="font-bebas text-5xl md:text-7xl uppercase tracking-wider text-white"
                delay={0.3}
                staggerDelay={0.06}
              />
              <div class="w-24 h-px bg-gradient-to-r from-white to-transparent"></div>
              <div class="space-y-6 font-inter text-lg leading-relaxed text-gray-300">
                <p class="text-xl">
                  Cuba Tattoo Studio was born in the heart of Albuquerque with a clear vision: 
                  to elevate the art of tattooing to its highest expression. Founded by passionate artists, 
                  our studio has become a benchmark of quality and professionalism.
                </p>
                <p>
                  Every line, every shadow, every detail is executed with surgical precision and 
                  artistic sensitivity. We don't just create tattoos; we create permanent stories 
                  on our clients' skin.
                </p>
                <p>
                  Our commitment goes beyond art: we maintain the highest standards 
                  of hygiene and safety, using sterilized equipment and techniques that guarantee 
                  a safe and memorable experience.
                </p>
              </div>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.4} intensity="medium">
            <div class="relative">
              <SlideInImage 
                direction="right"
                delay={0.5}
                intensity="medium"
                class="relative overflow-hidden"
              >
                <img 
                  src="https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=cinematic%20tattoo%20artist%20working%2C%20professional%20setup%2C%20black%20and%20white%20photography%2C%20detailed%20tattoo%20process%2C%20sterile%20gloves%2C%20tattoo%20machine%2C%20focused%20concentration%2C%20artistic%20precision%2C%20dramatic%20lighting%2C%20film%20noir&image_size=portrait_4_3" 
                  alt="Artist working at Cuba Tattoo Studio" 
                  class="w-full h-auto shadow-2xl"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
              </SlideInImage>
              <!-- Elementos decorativos -->
              <div class="absolute -top-10 -right-10 w-20 h-20 bg-white/10 rounded-full blur-2xl"></div>
              <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-white/5 rounded-full blur-3xl"></div>
            </div>
          </FadeInSection>
        </div>
      </div>
    </section>

    <!-- Philosophy Section Cinematogr치fico -->
    <ParallaxContainer speed={0.3} intensity="medium" class="py-32 px-6 bg-gradient-to-b from-gray-900 via-black to-gray-900 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-black/30 to-transparent"></div>
      <div class="max-w-6xl mx-auto text-center relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="mb-20 space-y-6">
          <StaggerText 
            text="OUR PHILOSOPHY"
            element="h2" 
            class="font-bebas text-5xl md:text-7xl uppercase tracking-wider text-white"
            delay={0.3}
            staggerDelay={0.06}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
        </FadeInSection>
        
        <div class="grid md:grid-cols-3 gap-12">
          <FadeInSection delay={0.4} intensity="medium">
            <div class="space-y-6 group">
              <div class="w-20 h-20 mx-auto border-2 border-white rounded-full flex items-center justify-center group-hover:bg-white group-hover:text-black transition-all duration-500">
                <span class="font-bebas text-3xl">01</span>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Excellence</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                Every tattoo is a masterpiece. We accept nothing less than perfection in every stroke.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.6} intensity="medium">
            <div class="space-y-6 group">
              <div class="w-20 h-20 mx-auto border-2 border-white rounded-full flex items-center justify-center group-hover:bg-white group-hover:text-black transition-all duration-500">
                <span class="font-bebas text-3xl">02</span>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Safety</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                Hygiene and sterilization protocols that exceed industry standards.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.8} intensity="medium">
            <div class="space-y-6 group">
              <div class="w-20 h-20 mx-auto border-2 border-white rounded-full flex items-center justify-center group-hover:bg-white group-hover:text-black transition-all duration-500">
                <span class="font-bebas text-3xl">03</span>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Personalization</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                Every design is unique, adapted to our clients' vision and personality.
              </p>
            </div>
          </FadeInSection>
        </div>
        
        <!-- Elementos decorativos -->
        <div class="absolute top-20 left-10 w-24 h-24 bg-white/5 rounded-full blur-2xl"></div>
        <div class="absolute bottom-20 right-10 w-40 h-40 bg-white/3 rounded-full blur-3xl"></div>
      </div>
    </ParallaxContainer>

    <!-- Process Section Cinematogr치fico -->
    <section class="py-32 px-6 bg-gradient-to-b from-black to-gray-900 relative">
      <div class="max-w-7xl mx-auto">
        <FadeInSection delay={0.2} intensity="high" class="text-center mb-20 space-y-6">
          <StaggerText 
            text="OUR PROCESS"
            element="h2" 
            class="font-bebas text-5xl md:text-7xl uppercase tracking-wider text-white"
            delay={0.3}
            staggerDelay={0.06}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
        </FadeInSection>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
          <FadeInSection delay={0.4} intensity="medium">
            <div class="text-center space-y-6 group">
              <div class="w-24 h-24 mx-auto bg-white text-black rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-500 shadow-2xl">
                <span class="font-bebas text-3xl">01</span>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Consultation</h3>
              <p class="font-inter text-gray-300 leading-relaxed">
                We discuss your idea, preferred style and placement. We evaluate feasibility and advise you.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.6} intensity="medium">
            <div class="text-center space-y-6 group">
              <div class="w-24 h-24 mx-auto bg-white text-black rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-500 shadow-2xl">
                <span class="font-bebas text-3xl">02</span>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Design</h3>
              <p class="font-inter text-gray-300 leading-relaxed">
                We create a custom design based on your references and aesthetic preferences.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.8} intensity="medium">
            <div class="text-center space-y-6 group">
              <div class="w-24 h-24 mx-auto bg-white text-black rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-500 shadow-2xl">
                <span class="font-bebas text-3xl">03</span>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Session</h3>
              <p class="font-inter text-gray-300 leading-relaxed">
                We execute the tattoo with precision, maintaining constant communication with you.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={1.0} intensity="medium">
            <div class="text-center space-y-6 group">
              <div class="w-24 h-24 mx-auto bg-white text-black rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-500 shadow-2xl">
                <span class="font-bebas text-3xl">04</span>
              </div>
              <h3 class="font-bebas text-2xl uppercase tracking-wider text-white">Aftercare</h3>
              <p class="font-inter text-gray-300 leading-relaxed">
                We provide you with detailed instructions for post-tattoo care and follow-up.
              </p>
            </div>
          </FadeInSection>
        </div>
      </div>
    </section>

    <!-- FAQ Section Cinematogr치fico -->
    <ParallaxContainer speed={0.2} intensity="medium" class="py-32 px-6 bg-gradient-to-b from-gray-900 via-black to-gray-900 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-black/40 to-transparent"></div>
      <div class="max-w-5xl mx-auto relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="text-center mb-20 space-y-6">
          <StaggerText 
            text="FREQUENTLY ASKED QUESTIONS"
            element="h2" 
            class="font-bebas text-5xl md:text-7xl uppercase tracking-wider text-white"
            delay={0.3}
            staggerDelay={0.06}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
        </FadeInSection>
        
        <div class="space-y-12">
          <FadeInSection delay={0.4} intensity="medium">
            <div class="border-b border-gray-700 pb-8 group">
              <h3 class="font-bebas text-2xl uppercase tracking-wider mb-6 text-white group-hover:text-gray-300 transition-colors duration-300">How much does a tattoo cost?</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                Prices vary depending on the size, complexity and placement of the tattoo. 
                We offer free consultations where we evaluate your project and provide you with 
                a detailed quote. Our hourly rates range from $150-$200 
                depending on the artist and design complexity.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.5} intensity="medium">
            <div class="border-b border-gray-700 pb-8 group">
              <h3 class="font-bebas text-2xl uppercase tracking-wider mb-6 text-white group-hover:text-gray-300 transition-colors duration-300">Do you require a deposit?</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                Yes, we require a $100 deposit to book your appointment. This deposit 
                is deducted from the total cost of the tattoo and is non-refundable in case of 
                cancellation with less than 48 hours notice.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.6} intensity="medium">
            <div class="border-b border-gray-700 pb-8 group">
              <h3 class="font-bebas text-2xl uppercase tracking-wider mb-6 text-white group-hover:text-gray-300 transition-colors duration-300">What should I do before my appointment?</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                Make sure to eat well before your session, stay hydrated and avoid alcohol 
                24 hours beforehand. Wear comfortable clothing that allows easy access to the area to be tattooed. 
                If you take blood-thinning medications, consult with your doctor before the appointment.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.7} intensity="medium">
            <div class="border-b border-gray-700 pb-8 group">
              <h3 class="font-bebas text-2xl uppercase tracking-wider mb-6 text-white group-hover:text-gray-300 transition-colors duration-300">How long does a tattoo take to heal?</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                Complete healing takes 2-4 weeks. The first 3-5 days are critical 
                for initial care. We will provide you with detailed care instructions 
                and will be available to answer any questions during the process.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.8} intensity="medium">
            <div class="border-b border-gray-700 pb-8 group">
              <h3 class="font-bebas text-2xl uppercase tracking-wider mb-6 text-white group-hover:text-gray-300 transition-colors duration-300">Do you offer free touch-ups?</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                We offer free touch-ups within the first 6 months, provided that 
                you have correctly followed the care instructions. Touch-ups 
                due to poor care or excessive sun exposure may have an additional cost.
              </p>
            </div>
          </FadeInSection>
          
          <FadeInSection delay={0.9} intensity="medium">
            <div class="pb-8 group">
              <h3 class="font-bebas text-2xl uppercase tracking-wider mb-6 text-white group-hover:text-gray-300 transition-colors duration-300">What safety measures do you maintain?</h3>
              <p class="font-inter text-gray-300 leading-relaxed text-lg">
                We use single-use disposable needles, autoclave-sterilized equipment, 
                and follow strict disinfection protocols. Our studio complies with all 
                New Mexico health regulations and we maintain current certifications 
                in first aid and bloodborne pathogens.
              </p>
            </div>
          </FadeInSection>
        </div>
        
        <!-- Elementos decorativos -->
        <div class="absolute top-20 right-10 w-24 h-24 bg-white/5 rounded-full blur-2xl"></div>
        <div class="absolute bottom-20 left-10 w-40 h-40 bg-white/3 rounded-full blur-3xl"></div>
      </div>
    </ParallaxContainer>

    <!-- CTA Section Cinematogr치fico -->
    <ParallaxContainer speed={0.4} intensity="high" class="py-32 px-6 bg-gradient-to-b from-black via-gray-900 to-black relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-black/50 via-transparent to-black/50"></div>
      <div class="absolute inset-0">
        <div class="w-full h-full bg-gradient-to-t from-black via-transparent to-black opacity-70"></div>
      </div>
      <div class="max-w-5xl mx-auto text-center relative z-10">
        <FadeInSection delay={0.2} intensity="high" class="space-y-8">
          <StaggerText 
            text="READY FOR YOUR NEXT TATTOO?"
            element="h2" 
            class="font-bebas text-5xl md:text-8xl uppercase tracking-wider text-white leading-tight"
            delay={0.3}
            staggerDelay={0.08}
          />
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
          <p class="font-inter text-2xl md:text-3xl text-gray-300 max-w-4xl mx-auto leading-relaxed">
            Schedule your free consultation and let's start creating your personalized work of art
          </p>
        </FadeInSection>
        
        <FadeInSection delay={0.6} intensity="medium" class="pt-12">
          <div class="flex flex-col sm:flex-row gap-8 justify-center">
            <Button href="/reservas" variant="primary" size="lg">
              Book Consultation
            </Button>
            <Button href="/portfolio" variant="secondary" size="lg">
              View Portfolio
            </Button>
          </div>
        </FadeInSection>
        
        <!-- Elementos decorativos -->
        <div class="absolute -top-20 -left-20 w-40 h-40 bg-white/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-20 -right-20 w-60 h-60 bg-white/3 rounded-full blur-3xl"></div>
      </div>
    </ParallaxContainer>
  </main>

  <Footer />
</Layout>

<style>
  .gsap-element {
    opacity: 0;
    transform: translateY(30px);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Hero animation
  gsap.timeline()
    .from('h1', { 
      duration: 1.2, 
      y: 100, 
      opacity: 0, 
      ease: 'power3.out',
      delay: 0.5
    })
    .from('h1 + p', { 
      duration: 1, 
      y: 50, 
      opacity: 0, 
      ease: 'power2.out'
    }, '-=0.6');
  
  // Scroll-triggered animations for sections
  gsap.utils.toArray('.gsap-element').forEach((element) => {
    gsap.to(element, {
      opacity: 1,
      y: 0,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: element,
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      }
    });
  });
  
  // Stagger animation for process steps
  gsap.from('.text-center.space-y-4', {
    y: 50,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.grid.md\\:grid-cols-2.lg\\:grid-cols-4',
      start: 'top 70%'
    }
  });
  
  // FAQ items animation
  gsap.from('.border-b.border-gray-700', {
    x: -50,
    opacity: 0,
    duration: 0.6,
    stagger: 0.1,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.space-y-8',
      start: 'top 70%'
    }
  });
</script>