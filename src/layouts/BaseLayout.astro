---
import "../styles/global.css";
import BackgroundManager from "../components/BackgroundManager";
import ScrollObserver from "../components/ScrollObserver";
import FloatingDock from "../components/FloatingDock";

interface Props {
  title?: string;
  description?: string;
  mode?: "home" | "artist";
}

const {
  title = "Cuba Tattoo Studio | Premium Tattoo Art in Albuquerque, NM",
  description = "Cuba Tattoo Studio â€” premium custom tattoo art in Albuquerque, New Mexico. Book a consultation with our talented artists David, Nina, and Karli.",
  mode = "home",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Preconnect fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- Preload hero assets -->
    <link rel="preload" as="image" href="/backgrounds/hero.svg" />
    <link rel="preload" as="image" href="/logo.svg" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/logo.svg" />

    <!-- Theme color -->
    <meta name="theme-color" content="#0a0a0c" />
    <meta name="color-scheme" content="dark" />

    <!-- Schema.org LocalBusiness -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "TattooParlor",
      "name": "Cuba Tattoo Studio",
      "description": description,
      "url": "https://cubatattoostudio.com",
      "telephone": "+1-505-492-9806",
      "email": "info@cubatattoostudio.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "1311 San Mateo Blvd NE",
        "addressLocality": "Albuquerque",
        "addressRegion": "NM",
        "postalCode": "87109",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "35.1058",
        "longitude": "-106.5856"
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "11:00",
          "closes": "19:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "11:00",
          "closes": "17:00"
        }
      ],
      "priceRange": "$$",
      "image": "https://cubatattoostudio.com/logo.svg",
      "sameAs": [
        "https://instagram.com/cubatattoostudio",
        "https://facebook.com/cubatattoostudio"
      ]
    })} />
  </head>
  <body
    class="bg-[var(--color-surface-primary)] text-white font-sans overflow-x-hidden"
  >
    <BackgroundManager client:only="react" />

    <main class="relative z-10">
      <slot />
    </main>

    <ScrollObserver client:only="react" />
    {mode !== "artist" && <FloatingDock client:only="react" />}
  </body>
</html>
